<section id="login" class="flex-col">
    <p id="tapar-el-fondo"></p>
    <form action="<%= link %>" method="POST" class="flex-col">
        <h1><%= titulo %></h1>
         <!--Mail y Contraseña-->
        <section class="flex-col">  <!--Mail-->
            <div class="formulario-grupo flex-col">
                <input type="text" class="input" name="email" placeholder="Correo Electrónico"
                    value="<%= locals.data_entry ? data_entry.email : null %>">
            </div>
        </section>
        <section class="flex-col">  <!--Contraseña-->
            <div class="formulario-grupo flex-col">
                <input type="password" class="input" name="contrasena" id="contrasena"
                    value="<%= locals.data_entry ? data_entry.contrasena : null %>" placeholder="Contraseña">
                <i onclick="mostrar('contrasena')" class="fas fa-eye-slash" id="eye"></i>
            </div>
            </div>
        </section>
        <section>   <!--Credenciales Inválidas-->
            <% if (locals.errores) { %>
                <p class="criterio input-error">Credenciales inválidas</p>
            <% } %>
        </section>
        <section id="buttons"><!--Botones-->
            <div class="flex-row">
                <button type="submit">Aceptar</button>
                <a href="/registro" ><button type="button" id="registrarse">No estoy registrado</button></a>
            </div>
            <div class="flex-row">
                <button type="button">Cancelar</button>
                <a href="#"><button type="button">Olvidé mi contraseña</button></a>
            </div>
        </section>
    </form>   
</section>

<script>
    function mostrar(n) {
        var cambio = document.getElementById(n);
        if(cambio.type == "password"){
            cambio.type = "text";$('#eye').removeClass('fa-eye-slash').addClass('fa-eye');
        }else{
            cambio.type = "password";$('#eye').removeClass('fa-eye').addClass('fa-eye-slash');
        }
    }
</script>

