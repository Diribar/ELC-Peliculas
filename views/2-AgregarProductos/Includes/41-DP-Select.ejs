<% registro = datosPersSelect.find(n => n.campo == campo) %>
<% if (registro[dataEntry.entidad]) { %>
	<section class="label-input flex-row">
		<label><%= registro.titulo %></label>
		<div id="<%= campo %>" class="input-error<%- (campo == 'subcategoria_id') ? ' ocultar' : '' %>">
			<!-- Input -->
			<select name="<%= campo %>" class="input" <% if (campo=="en_castellano_id") { %>autofocus<% } %>>
				<option value="" class="<% if (!campo.includes("historico")) { %>ocultar<% } %>" <% if (!dataEntry[campo]) { %>selected<% } %>>Elegí una opción</option>
				<% for (valor of registro.valores) { %>
					<option value="<%= valor.id %>" 
						<% if (dataEntry[campo] == valor.id) { %>selected<% } %>
						<% if (campo=="subcategoria_id") { %>class="<%= valor.categoria_id %>"<% } %>
						<% if (dataEntry.entidad=="peliculas" && campo=="en_castellano_id" && valor.id==2) { %>class="ocultar"<% } %>
					>
						<%= valor.nombre %>
					</option>
				<% } %>
			</select>
			<!-- Ayuda -->
			<i class="fas fa-question-circle"></i>
			<ul type="dots" class="mensajeAyuda ocultar">
				<% if (registro.mensajePeli) {registro.mensajes = (dataEntry.entidad == "peliculas") ? registro.mensajePeli : registro.mensajeColec} %>
				<% for (mensaje of registro.mensajes) { %><li><%= mensaje %></li><% } %> 
			</ul>
			<!-- Errores -->
			<i class="fas fa-times-circle<%- !errores[campo] ? ' ocultar' : '' %>">
				<span class="mensajeError"><%= errores[campo] %></span>
			</i>
			<i class="fas fa-check-circle ocultar" style="display: none;"></i>
			<!-- Link a Relación con la vida -->
			<% if (campo.includes("historico")) { %>
				<a class="link <%= campo %> " href="/agregar/<%= registro.link %>" target="_self" title="Link a agregar <%= registro.titulo.toLowerCase() %> " tabindex="-1">L</a>
			<% } %>
		</div>
	</section>
<% } %>
