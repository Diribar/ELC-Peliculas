<% rubro = data_entry.rubroAPI == "movie" ? "Película" : "Colección" %>
<button type="menu" class="titulo">Agregá una <%= rubro %> a nuestra Base de Datos</button>
<form action="<%= link %>" method="POST" id="data_entry" class="flex-col" >
	<section id="titulos">
		<h2>Paso 4 de 4: Datos Personalizados</h2>
	</section>
	<!-- Datos -->
	<section id="cuerpo">
		<!--Primera columna-->
		<div class="flex-col">
			<!-- Datos generales -->
			<div class="flex-col">
				<h3 style="margin-top: 0;">Datos generales</h3>
				<!--Existe una versión en castellano-->
				<%- include("41-DP-Select", {campo: "en_castellano"}) %>
				<!--Es a Color-->
				<%- include("41-DP-Select", {campo: "color"}) %>
				<!--Categoría-->
				<%- include("41-DP-Select", {campo: "categoria_id"}) %>
				<!--Sub-categoría-->
				<%- include("41-DP-Select", {campo: "subcategoria_id"}) %>
				<!--Público sugerido-->
				<%- include("41-DP-Select", {campo: "publico_sugerido_id"}) %>
			</div>
			<!-- Links -->
			<div class="flex-col">
				<h3>Links gratuitos</h3>
				<!--Link del trailer-->
				<%- include("42-DP-Input", {campo: "link_trailer"}) %>
				<!--Links gratuitos para ver la película-->
				<%- include("42-DP-Input", {campo: "link_pelicula"}) %>
			</div>
			<!-- Relación con la vida -->
			<div class="flex-col">
				<h3>Relación con la vida</h3>
				<!--Inspira fe y/o valores-->
				<%- include("41-DP-Select", {campo: "personaje_historico_id"}) %>
				<!--Entretiene-->
				<%- include("41-DP-Select", {campo: "hecho_historico_id"}) %>
				<!--Calidad Técnica-->
				<%- include("41-DP-Select", {campo: "sugerida_para_evento_id"}) %>
			</div>
		</div>
		<!--Columna del medio-->
		<div id="columnaMedio">
		</div>
		<!--Segunda columna-->
		<div class="flex-col" style="align-items: center;">
			<!-- Avatar -->
			<div id="imagenPeli" class="form-grupo">
				<img id="imgTMDB" src="<%= data_entry.ruta.slice(8) %>/<%= data_entry.avatar %>" alt="afiche">
			</div>	
			<!-- Tu calificación -->
			<div class="flex-col">
				<h3>Tu calificación</h3>
				<!--Inspira fe y/o valores-->
				<%- include("41-DP-Select", {campo: "fe_valores_id"}) %>
				<!--Entretiene-->
				<%- include("41-DP-Select", {campo: "entretiene_id"}) %>
				<!--Calidad Técnica-->
				<%- include("41-DP-Select", {campo: "calidad_sonora_visual_id"}) %>
			</div>
		</div>
	</section>
	<!-- Flechas y Botón -->
	<section id="flechas" class="flex-row space-between">
		<a href="/productos/agregar/datos-duros"><i class="fas fa-arrow-alt-circle-left"></i></a>
		<button type="submit" class="botonSinLink">Avanzar</button>
		<% if (false) { %>
			<a href="#"><i class="fas fa-arrow-alt-circle-right"></i></a>
		<% } else { %>
			<i class="fas fa-arrow-alt-circle-right flechaSinLink"></i>
		<% } %>
	</section>
</form>
