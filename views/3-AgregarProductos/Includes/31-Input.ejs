<section style="order: <%=i%><%- (i == 0) ? '; margin-top: 0' : '' %>" class="label-input flex-row">
	<label><%= datos[i].titulo %> </label>
	<div class="input-error">
		<input type="text" class="input" name="<%= datos[i].campo %>"
			value="<%= data_entry[datos[i].campo] %>"
			<% if (datos[i].id) { %>id="numero" placeholder="sólo números"<% } %>
			<% if (data_entry[datos[i].campo] && !errores[datos[i].campo]) { %>disabled<% } %> 
		>
		<i class="fas fa-times-circle<%- !errores[datos[i].campo] ? ' ocultar' : '' %>">
			<span class="mensajeError"><%= errores[datos[i].campo] %></span>
		</i>
	</div>
</section>
