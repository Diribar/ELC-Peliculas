<%- include('./parciales/0-0PRE-HEAD') %>
<head>
  <%- include('./parciales/0-1HEAD') %>
  <title>Películas</title>
</head>
<body>
  <header>
    <%- include('./parciales/1-HEADER') %>
    <%- include('./parciales/1-HEADER-films') %>
    <link rel="stylesheet" href="/stylesheets/1-PELICULAS-MAIN.css">
  </header>
  <main>
    <section id="Main-y-Footer">
      <section id="Main">
        <div id="Filtros">
          <form class="flex" action="" method="GET"><!--Público Recomendado-->
            <label>Público Recomendado</label>
            <select name="público">
              <option value="SF" selected>Sin Filtro</option>
              <option value="FM">Familia</option>
              <option value="MY">Mayores</option>
              <option value="MN">Menores</option>
            </select>
          </form>
          <!--Agregar ATP (SF/SI)-->
          <form class="flex" action="" method="GET"><!--Centradas en la Fe Católica-->
            <label>Centradas en la Fe Católica</label>
            <select name="ELC-VPC">
              <option value="SF" selected>Sin Filtro</option>
              <option value="ELC">SI</option>
              <option value="VPC">NO</option>
            </select>
          </form>
          <form class="flex" action="" method="GET"><!--Incluir Películas Descartadas-->
            <label>Incluir Películas Descartadas</label>
            <select name="Descartadas">
              <option value="NO" selected>NO</option>
              <option value="SI">Sin Filtro</option>
              <option value="SD" >Sólo descartadas</option>
            </select>
          </form>
          <form class="flex" action="" method="GET"><!--Década de Estreno-->
            <label>Década de Estreno</label>
            <select name="década">
              <option value="SF" selected>Sin Filtro</option>
              <option value="1970">< 1970</option>
              <option value="1999">1970-1999</option>
              <option value="2019">2000-2014</option>
              <option value="2019">2015 en adelante</option>
            </select>
          </form>
          <div id="búsqueda"> <!--BÚSQUEDA-->
            <input type="text" placeholder="Texto de búsqueda">
            <button><i class="fas fa-search"></i></button>
          </div>
          <div><!--Íconos y botones-->
            <!--Agregar ícono de grabar-->
            <!--Contador de cantidad de películas con este filtro-->
            <button type="reset">Limpiar Filtros</button>
            <button type="submit">Aplicar Filtros</button>
          </div>
        </div>
        <div id="Cuerpo"><!--MENÚ DE OPCIONES-->
          <p><button id="Título">Menú de Opciones</button></p>
          <select name="opción">
            <a href=""><option value="MA" selected>Sugeridas para el momento del año</option></a>
            <a href=""><option value="CFC">Centradas en la Fe Católica</option></a>
            <a href=""><option value="VPC">Valores Presentes en la Cultura</option></a>
            <a href=""><option value="CAL">TODAS - Por orden de calificación en nuestra página</option></a>
            <a href=""><option value="AÑO">TODAS - Por año de estreno</option></a>
            <a href=""><option value="INC">TODAS - Por orden de incorporación a nuestra base de datos</option></a>
            <a href=""><option value="AÑO">VISITADAS - Por orden de visita</option></a>
          </select>
        </div>
      </section>
      <%- include('./parciales/3-FOOTER') %>
    </section>
    <section id="Sagrada-Familia">
      <img src="/images/Sagrada Familia.jpg" alt="Sagrada Familia">
    </section>
  </main>
</body>
</html>