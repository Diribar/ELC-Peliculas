<form action="<%= link %>" method="POST">
    <h1><%= titulo %></h1>
    <!--Mail y Contraseña-->
    <section class="label-input flex-row">  <!--Mail-->
        <label for="email">E-Mail</label>
        <div class="formulario-grupo">
            <input type="text" class="input" name="email" placeholder="Correo Electrónico"
                value="<%= locals.data_entry ? data_entry.email : null %>">
            <% if (locals.errores && errores.email) { %><i class="fas fa-times-circle"></i><% } %>
            <% if (locals.errores && !errores.email) { %><i class="fas fa-check-circle"></i><% } %>
        </div>
    </section>
    <div class="flex-col">  <!--Error en el mail-->
        <% if (locals.errores && errores.email) { %>
            <p class="criterio error"><%= errores.email.msg %></p>
        <% } %>    
    </div>
    <section class="label-input flex-row">  <!--Contraseña-->
        <label for="contrasena">Contraseña</label>
        <div class="formulario-grupo">
            <input type="password" class="input" name="contrasena" id="contrasena"
                value="<%= locals.data_entry ? data_entry.contrasena : null %>" placeholder="Contraseña">
            <i onclick="mostrar('contrasena')" class="fas fa-eye-slash" id="eye"></i>
            <% if (locals.errores && errores.contrasena) { %><i class="fas fa-times-circle"></i><% } %>
            <% if (locals.errores && !errores.contrasena) { %><i class="fas fa-check-circle"></i><% } %>
        </div>
    </section>
    <div class="flex-col">  <!--Error en la contraseña-->
        <% if (locals.errores && errores.contrasena) { %>
            <p class="criterio error"><%= errores.contrasena.msg %></p>
        <% } else { %>
            <% if (!locals.errores) { %>
                <p class="criterio">Debe tener de 6 a 12 caracteres</p>
            <% } %>
        <% } %>
    </div>
    <br>
    <section class="flex-col">   <!--Credenciales Inválidas-->
        <% if (!errorEnDataEntry && credencialesInvalidas) { %>
            <p class="criterio error">El e-mail y/o la contraseña<br>no figuran en nuestra base de datos</p>
        <% } %>
    </section>
    <section id="buttons" class="flex-row"><!--Botones-->
        <button type="submit">Aceptar</button>
        <a href="/usuarios/registro-mail" ><button type="button">No estoy registrado</button></a>
    </section>
    <section id="buttons" class="flex-row"><!--Botones-->
        <button onclick="retroceder()" type="button" id="cancelar">Cancelar</button>
        <a href="#"><button type="button">Olvidé mi contraseña</button></a>
        </div>
    </section>
</form>   
