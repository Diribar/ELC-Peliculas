<%- include('0-Head') %>
<body>
  <%- include('1-Header') %>
  <main class="flex-row">
    <section id="imagen-derecha">
      <img alt="<%= producto.titulo_traducido %>" src="/images/3-Peliculas/<%= producto.imagen %>" title="<%= producto.titulo_traducido %>">
    </section>
    <section id="main-y-footer" class="flex-col grow">
      <%- include('3-Footer') %>
      <!--**************************** CUERPO ************************-->
      <section class="cuerpo">
        <p><button class="titulo"><%= producto.titulo_traducido %> </button></p>
        <div class="flex-row">
          <nav class="flex-col">
            <% for (let n of BDdetalle) { %> 
              <a href="/peliculas/<%= n.codigo %>/<%= producto.id %> "><button class="subtitulo activo"><%= n.nombre %> </button></a>
            <% } %> 
          </nav>
          <div>
            <p style="font-weight: bold">Título original: <%= producto.titulo_OR %></p>
            <p>País de origen: <%= producto.pais_origen %></p>
            <p>Año de estreno: <%= producto.ano_estreno %></p>
            <p>Duración: <%= producto.duracion %> minutos</p>
            <p>Dirección: <%= producto.direccion %></p>
            <p>Guión: <%= producto.guion %></p>
            <p>Música: <%= producto.musica %></p>
            <p>Actor/es principal/es: <%= producto.actor1 %>
              <% if (producto.actor2) { %>, <%= producto.actor2 %><% } %>
              <% if (producto.actor3) { %>, <%= producto.actor3 %><% } %>
            </p>
            <p>Productora: <%= producto.productora %></p>
            <p>Idioma castellano: <%= producto.idioma_castellano %></p>
            <p>Color: <%= producto.color %></p>
            <p>Público recomendado: 
                <%
                    let publico="";
                    if (producto.mayores && producto.menores) {
                      publico = "Familia"
                    } else {
                      if (producto.mayores) {publico = "Mayores (ATP: "+ producto.ATP +")" }
                      if (producto.menores) {publico = "Menores"}
                    }
                %>
                <%= publico %> 
            </p>
            <p>Categoría: <%= producto.categoría %></p>
            <p>Sub-categoría: <%= producto.sub_categoria %></p>
          </div>
        </div>
      </section>
      <!--****************************** FIN *************************-->
    </section>
  </main>
</body>
</html>