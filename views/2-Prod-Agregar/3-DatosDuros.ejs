<h1 class="titulo" id="titulo">
	Agregá un<%= dataEntry.entidad != "capitulos" ? "a" : "" %> <%= dataEntry.producto %> a nuestra Base de Datos
</h1>
<form action="<%= link %>" method="POST" enctype = "multipart/form-data" id="dataEntry" class="flex-col" >
	<p id="entidad" class="ocultar"><%= dataEntry.entidad %></p>
	<section id="titulos">
		<h2>Paso 3 de 5: Completá los Datos Duros</h2>
		<!-- Links a otras páginas de consulta -->
		<div class="flex-col" id="links">
			<p>Si necesitás consultar algún dato</p>
			<nav class="flex-row">
				<% if (dataEntry.fuente!="TMDB") { %>
					<% tmdb = dataEntry.nombre_original ? "search?language=es&query=" + dataEntry.nombre_original : "" %>
					<a class="logos" href="https://www.themoviedb.org/<%= tmdb %>" target="_blank"><img src="/imagenes/0-Logos/LogoTMDB.jpg" alt="TMDB"></a>
				<% } %>
				<% if (dataEntry.fuente!="FA") { %>
					<% fa = dataEntry.nombre_original ? "search.php?stext="+dataEntry.nombre_original : "" %>
					<a class="logos" href="https://www.filmaffinity.com/es/<%= fa %>" target="_blank"><img src="/imagenes/0-Logos/LogoFA.jpg" alt="FA"></a>
				<% } %>
				<% imdb = dataEntry.IMDB_id ? "title/"+dataEntry.IMDB_id+"/technical" : (dataEntry.nombre_original ? "find?q="+dataEntry.nombre_original : "") %>
				<a class="logos" href="https://www.imdb.com/<%= imdb %>" target="_blank"><img src="/imagenes/0-Logos/LogoIMDB.jpg" alt="IMDB"></a>
			</nav>
		</div>
	</section>
	<!-- Datos -->
	<section id="cuerpo">
		<!--Primera columna-->
		<div class="flex-col">
			<!-- Primeros campos -->
			<% for (registro of camposDD1) { %><%- include("31-DD-Input", {registro}) %><% } %>
			<!-- País -->
			<%- include("32-DD-Pais") %>
			<!-- Idioma original -->
			<%- include("33-DD-Idioma", {idioma_id: dataEntry.idioma_original_id}) %>
			<!-- Siguientes campos -->
			<% for (registro of camposDD2) { %><%- include("31-DD-Input", {registro}) %><% } %>
			<!--Sinopsis-->
			<%- include("34-DD-Sinopsis") %>
		</div>
		<!--Columna intermedia-->
		<div id="columnaMedio">
		</div>
		<!--Segunda columna-->
		<div id="imagenPeli" class="form-grupo input-error">
			<!-- Si existe una imagen y viene desde TMDB -->
			<% if (dataEntry.avatar && dataEntry.fuente=="TMDB") { %>
				<img src="<%= dataEntry.avatar %>" alt="afiche">
			<% } else { %>
				<label for="imagen" id="preview"></label>
			<% } %>
			<!-- Si existe una imagen que no viene de TMDB -->
			<% if (dataEntry.avatar && dataEntry.fuente!="TMDB") { %>
				<button type="button">Hacé <em>click</em> acá y luego<br>pegá con <em>Ctrl + V</em></button>
				<p id="url" class="ocultar"><%= dataEntry.avatar %></p>
			<% } %>
			<!-- Si no existe una imagen -->
			<% if (!dataEntry.avatar) { %>
				<button type="button">Elegí una imagen<br>(puede ser una URL)</button>
			<% } %>
			<!-- Rutina para todos los casos -->
			<input name="avatar" id="imagen" type="file" accept="image/*" class="input ocultar">
			<i class="fas fa-times-circle <%- dataEntry.avatar && dataEntry.fuente=="TMDB" ? 'ocultar' : '' %>">
				<span class="mensajeError"><%= errores.avatar %></span>
			</i>
		</div>	
	</section>
	<!-- Flechas y Botón -->
	<section id="flechas">
		<a href="/producto/agregar/<%= origen %>" tabindex="-1"><i class="fas fa-arrow-alt-circle-left"></i></a>
		<button type="submit" autofocus><i class="fas fa-check-circle"></i></button>
	</section>
</form>
