<section class="label-input <% if (elemento.grupo=="RCLV") { %> RCLV<% } %>">
	<label><%= elemento.titulo %></label>
	<div class="input-error">
		<!-- Input -->
		<select name="<%= elemento.nombreDelCampo %>" class="input <%= elemento.angosto ? 'angosto' : '' %>">
			<option value="" class="ocultar" <% if (!registro[elemento.nombreDelCampo]) { %>selected<% } %>>Elejí<% if (!elemento.angosto) { %> una opción<% } %></option>
			<% for (valor of elemento.valores) { %>
				<option value="<%= valor.id %>" 
					<% if (registro[elemento.nombreDelCampo] == valor.id) { %>selected<% } %>
					<% if (elemento.nombreDelCampo == "subcategoria_id") { %>class="<%= valor.categoria_id %>"<% } %>
					<% if (entidad != "colecciones" && (elemento.nombreDelCampo == "en_castellano_id" || elemento.nombreDelCampo == "en_color_id") && valor.id == 2) { %>class="ocultar"<% } %>
				>
					<%= valor.nombre %>
				</option>
			<% } %>
		</select>
		<!-- Ayuda -->
		<i class="fa-solid fa-circle-question"></i>
		<ul type="dots" class="mensajeAyuda ocultar">
			<% if (!elemento.mensajes) {elemento.mensajes = (elemento.entidad == "peliculas") ? elemento.mensajePeli : elemento.mensajeColec} %>
			<% for (mensaje of elemento.mensajes) { %><li><%= mensaje %></li><% } %> 
		</ul>
		<!-- Errores -->
		<i class="fa-solid fa-circle-xmark<%- !errores[elemento.nombreDelCampo] ? ' ocultar' : '' %>">
			<span class="mensajeError"><%= errores[elemento.nombreDelCampo] %></span>
		</i>
		<i class="fa-solid fa-circle-check ocultar"></i>
		<!-- Aviso de cambio en el data-entry -->
		<i class="fa-solid fa-arrow-right-long ocultar"></i>
		<!-- Link a Relación con la vida -->
		<% if (elemento.grupo=="RCLV") { %>
			<i class="fa-solid fa-circle-plus linkRCLV <%= elemento.nombreDelCampo %>" title='Link a "Agregar <%= elemento.titulo.toLowerCase() %>"' tabindex="-1"></i>
		<% } %>
	</div>
</section>
