<section class="label-input <% if (campo.RCLV) { %> RCLV<% } %>">
	<label><%= campo.titulo %></label>
	<div class="input-error">
		<!-- Input -->
		<select name="<%= campo.campo %>" class="input <%= campo.clase ? campo.clase : '' %>">
			<option value="" class="<% if (!campo.RCLV) { %>ocultar<% } %>" <% if (!registro[campo.campo]) { %>selected<% } %>>Elejí<% if (!campo.clase) { %> una opción<% } %></option>
			<% for (valor of campo.valores) { %>
				<option value="<%= valor.id %>" 
					<% if (registro[campo.campo] == valor.id) { %>selected<% } %>
					<% if (campo.campo == "subcategoria_id") { %>class="<%= valor.categoria_id %>"<% } %>
					<% if (entidad != "colecciones" && (campo.campo == "en_castellano_id" || campo.campo == "en_color_id") && valor.id == 2) { %>class="ocultar"<% } %>
				>
					<%= valor.nombre %>
				</option>
			<% } %>
		</select>
		<!-- Ayuda -->
		<i class="fa-solid fa-circle-question"></i>
		<ul type="dots" class="mensajeAyuda ocultar">
			<% if (!campo.mensajes) {campo.mensajes = (campo.entidad == "peliculas") ? campo.mensajePeli : campo.mensajeColec} %>
			<% for (mensaje of campo.mensajes) { %><li><%= mensaje %></li><% } %> 
		</ul>
		<!-- Errores -->
		<i class="fa-solid fa-circle-xmark<%- !errores[campo.campo] ? ' ocultar' : '' %>">
			<span class="mensajeError"><%= errores[campo.campo] %></span>
		</i>
		<i class="fa-solid fa-circle-check ocultar"></i>
		<!-- Aviso de cambio en el data-entry -->
		<i class="fa-solid fa-arrow-right-long ocultar"></i>
		<!-- Link a Relación con la vida -->
		<% if (campo.RCLV) { %>
			<i class="fa-solid fa-circle-plus linkRCLV <%= campo.campo %>" title='Link a "Agregar <%= campo.titulo.toLowerCase() %>"' tabindex="-1"></i>
		<% } %>
	</div>
</section>
