<tr class="yaExistentes">
	<!-- Url -->
	<td class="logoProv" title="<%= link.url %>">
		<a href="//<%= link.url %>" target="_blank">
			<img src="/imagenes/0-Logos/<%= link.proveedor_link.avatar %>" alt="<%= link.proveedor_link.nombre %>">
		</a>
		<div class="ocultar" id="link_id"><%= link.id %></div>
	</td>
	<!-- Motivo -->
	<td colspan="6" id="motivo" class="ocultar">
		<strong>Motivo: </strong>
		<select name="motivo">
			<option value="" class="ocultar" selected>Elejí el motivo</option>
			<% for (motivo of motivos) { %>
				<option value="<%= motivo.id %>"><%= motivo.comentario %></option>
			<% } %>
		</select>
	</td>
	<!-- Calidad -->
	<td class="taparMotivo"><%= link.calidad %></td>
	<!-- Tipo -->
	<td class="taparMotivo"><%= link.tipo_link.nombre %></td>
	<!-- Completo -->
	<td class="taparMotivo"><%- link.completo ? "SI" : "NO" %></td>
	<!-- Parte -->
	<td class="taparMotivo <%- link.completo ? 'desperdicio' : '' %>">
		<%- !link.completo ? link.parte : '' %>
	</td>
	<!-- Gratuito -->
	<td class="taparMotivo"><%= link.gratuito ? "SI" :  "NO" %></td>
	<!-- Status -->
	<td class="taparMotivo"><%= link.status_registro.links %> </td>
	<!-- Acción -->
	<td>
		<!-- Los links con status 'aprobado' se pueden editar/inactivar siempre -->
		<% if (link.status_registro.aprobado) { %>
			<!-- Ícono de edición -->
			<i class="fa-solid fa-pen" tabindex="-1" title="Editar"></i>
			<!-- Ícono de 'inactivar' -->
			<i class="fa-solid fa-circle-xmark out" tabindex="-1" title='Inactivar'></i>
		<% } else if (link.capturado_en > haceUnaHora) { %>
			<!-- Los links con captura 'válida' no se pueden 'tocar' -->
			<i class="fa-solid fa-circle-question" tabindex="-1" ></i>
			<span class="mensajeAyuda ocultar">
				Este link está siendo analizado por el equipo de revisores. A más tardar, debería terminarse de revisar a las <%= new Date() %>
			</span>
		<% } else { %>
			<!-- Los demás links se pueden editar siempre -->
			<i class="fa-solid fa-pen" tabindex="-1" title="Editar"></i>
			<% if (link.status_registro.creado && link.creado_por_id == usuario.id) { %>				
				<!-- Los links en status 'creado' y creados por el usuario, se pueden eliminar definitivamente -->
				<i class="fa-solid fa-trash-can out" tabindex="-1" title='Eliminar'></i>
			<% } else { %>
				<!-- Los demás links se pueden 'inactivar' -->
				<i class="fa-solid fa-circle-xmark out" tabindex="-1" title='Inactivar'></i>
			<% } %>				
		<% } %>
	</td>
</tr>
