<section class="label-input">
	<label><%= campo.titulo %></label>
	<!-- Data-entry y Errores -->
	<div class="input-error">
		<input type="text" name="<%= campo.campo %>" value="<%= registro[campo.campo] %>" autofocus autocomplete="off" 
			class="input <% if (campo.numero) { %>numero<% } %>"
			<% if (campo.numero) { %>placeholder="sólo números"<% } %>
		>
		<!-- Errores -->
		<i class="fas fa-times-circle <%- !errores[campo.campo] ? 'ocultar' : '' %>">
			<span class="mensajeError "><%= errores[campo.campo] %></span>
		</i>
		<i class="fas fa-check-circle ocultar"></i>
	</div>
</section>
