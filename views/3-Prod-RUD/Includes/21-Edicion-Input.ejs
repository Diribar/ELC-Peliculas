<section class="label-input">
	<label><%= campo.titulo %></label>
	<!-- Data-entry y Errores -->
	<div class="input-error">
		<input type="text" name="<%= campo.nombreDelCampo %>" value="<%= Producto[campo.nombreDelCampo] %>" autofocus autocomplete="off" 
			class="input <% if (campo.numero) { %>numero<% } %>"
			<% if (campo.numero) { %>placeholder="sólo números"<% } %>
		>
		<!-- Errores -->
		<i class="fa-solid fa-circle-xmark <%- !errores[campo.nombreDelCampo] ? 'ocultar' : '' %>">
			<span class="mensajeError "><%= errores[campo.nombreDelCampo] %></span>
		</i>
		<i class="fa-solid fa-circle-check ocultar"></i>
		<!-- Aviso de cambio en el data-entry -->
		<i class="fa-solid fa-arrow-right-long ocultar"></i>
	</div>
</section>
