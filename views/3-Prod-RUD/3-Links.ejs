<h1 id="titulo"><%= titulo %></h1>
<section id="datos">
	<h1><%= registro.nombre_castellano %> <em><% if (registro.nombre_original) { %>(<%= registro.nombre_original %>)<% } %></em></h1>
	<select id="tipoLink">
		<option value="TR">Trailer</option>
		<option value="PL">Película</option>
		<option value="TD">Todos</option>
	</select>
	<form>
		<table>
			<thead>
				<tr>
					<th>Proveedor</th>
					<th>Link</th>
					<th>Tipo</th>
					<th>Gratuito</th>
					<th>Creado en</th>
					<th>Creado por</th>
					<% if (usuario.rol_usuario.aut_gestion_prod) { %>
						<th>Alta analizada por</th>
						<th>Revisada en</th>
						<th>Revisada por</th>
					<% } %>
					<th>Acción</th>
				</tr>
			</thead>
			<tbody>
				<% for (link of linksAprob.filter(n => n.link_tipo_id == 1)) { %><%- include("31-Links-Datos") %><% } %>
				<% for (link of linksAprob.filter(n => n.link_tipo_id == 2)) { %><%- include("31-Links-Datos") %><% } %>
				<!-- Fila para nuevo link -->
				<tr id="dataEntry">
					<!-- Proveedor -->
					<td style="z-index: 6;" class="logoProv">
						<div class="input-error">
							<img>
							<input name="link_prov_id" class="input ocultar">
							<!-- Errores -->
							<i class="fa-solid fa-circle-xmark ocultar invisible"><span class="mensajeError "></span></i>
							<i class="fa-solid fa-circle-check ocultar invisible"></i>
						</div>
					</td>
					<!-- url -->
					<td style="z-index: 5;" class="url">
						<div class="input-error">
							<input name="url" type="text" autofocus class="input">
							<!-- Errores -->
							<i class="fa-solid fa-circle-xmark ocultar"><span class="mensajeError "></span></i>
							<i class="fa-solid fa-circle-check ocultar"></i>
						</div>
					</td>
					<!-- Tipo de Link -->
					<td style="z-index: 4;">
						<div class="input-error">
							<select name="link_tipo_id" class="input">
								<option value="" class="ocultar">Elejí</option>
								<% for (tipo of links_tipos) { %>
									<option value="<%= tipo.id %>"><%= tipo.nombre %></option>
								<% } %>
							</select>
							<!-- Errores -->
							<i class="fa-solid fa-circle-xmark ocultar"><span class="mensajeError "></span></i>
							<i class="fa-solid fa-circle-check ocultar"></i>
						</div>
					</td>
					<!-- Gratuito -->
					<td style="z-index: 2;">
						<div class="input-error">
							<select name="gratuito" class="input">
								<option value="" class="ocultar" selected>?</option>
								<option value="1">SI</option>
								<option value="0">NO</option>
							</select>
							<!-- Errores -->
							<i class="fa-solid fa-circle-xmark ocultar"><span class="mensajeError "></span></i>
							<i class="fa-solid fa-circle-check ocultar"></i>
						</div>
					</td>
					<!-- Desperdicio -->
					<td class="desperdicio"></td><td class="desperdicio"></td>
					<!-- Guardar -->
					<td>
						<i class="fa-solid fa-floppy-disk botonInactivado" title='Guardar'></i>
					</td>
					
				</tr>
			</tbody>
		</table>
	</form>
	<ul>
		Comentarios
		<li>Por favor intentá incluir por lo menos un link gratuito</li>
		<li>Sé muy cuidadoso de incluir links que respeten los derechos de autor</li>
	</ul>
</section>
<!-- Comandos -->
<section id="comandos">
	<% for (prov of provs.filter(n => n.buscador_automatico)) { %>
		<a 
			href="//<%= prov.url_distintivo + prov.url_buscar_pre + registro.nombre_castellano %><% if (prov.url_buscar_post) { %>&<%= prov.url_buscar_post %><% } %>" 
			target="_blank"
		>
			<img src="/imagenes/0-Logos/<%= prov.avatar %>" alt="">
		</a>
	<% } %>
</section>
<!-- Botones -->
<%- include("0-Flechas") %> 
