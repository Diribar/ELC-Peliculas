<!-- Datos -->
<section id="datos">
	<!-- Datos generales -->
	<section id="primeraColumna">
		<h3>Datos generales</h3>
		<!-- Primeros campos -->
		<% for (campo of camposDD1) { %><%- include("21-Edicion-Input", {campo}) %><% } %>
		<!-- País -->
		<%- include("22-Edicion-Pais") %>
		<!-- Idioma original -->
		<%- include("23-Edicion-Idioma", {idioma_id: registro.idioma_original_id}) %>
		<!--Existe una versión en castellano-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "en_castellano_id")}) %>
		<!--Es a Color-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "en_color_id")}) %>
		<!-- Producción -->
		<% for (campo of camposDD3) { %><%- include("21-Edicion-Input", {campo}) %><% } %>
		<h3>Datos Subjetivos</h3>
		<!--Categoría-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "categoria_id")}) %>
		<!--Sub-categoría-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "subcategoria_id")}) %>
		<!--Público sugerido-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "publico_sugerido_id")}) %>
		<!-- Links a Trailer y Película -->
		<div id="links">
			<h3>Links</h3>
			<a href="/" target="blank" tabindex="-1">
				<button type="button" tabindex="-1">Links de Trailer</button>
			</a>
			<a href="/" target="blank" tabindex="-1">
				<button type="button" tabindex="-1">Links de Película</button>
			</a>
		</div>
	</section>
	<section id="segundaColumna">
		<!-- Personas -->
		<h3>Personas</h3>
		<% for (campo of camposDD2) { %><%- include("21-Edicion-Input", {campo}) %><% } %>
		<!-- Relación con la vida -->
		<h3>Relación con la vida</h3>
		<!--Personaje histórico-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "personaje_historico_id")}) %>
		<!--Hecho histórico-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "hecho_historico_id")}) %>
		<!--Valor-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "valor_id")}) %>
		<h3>Sinopsis</h3>
		<!--Sinopsis-->
		<%- include("24-Edicion-Sinopsis") %>
	</section>
</section>
<!-- Botones -->
<section id="flechas">
	<a href="/producto/detalle/?entidad=<%= entidad %>&id=<%= ID %>" tabindex="-1"><i class="fas fa-arrow-alt-circle-left" tabindex="-1" title="Salir e ir a la vista 'Detalle'"></i></a>
	<div class="pack">
		<i class="fas1 fas fa-pencil-alt botonInactivado" title='Mostrar la versión editada'></i>
		<i class="fas fa-slash botonInactivado"></i>
		<i class="fas fa-home botonInactivado" title='Mostrar la versión original'></i>
	</div>
	
	<div class="pack">
		<label  for="inputSubmit" title='Guardar los cambios'><i class="fas1 fas fa-save botonInactivado submit"></i></label>
		<input type="submit" id="inputSubmit" class="ocultar" formaction="/producto/edicion" formmethod="post">
		<i class="fas fa-slash botonInactivado"></i>
		<i class="fa-solid fa-rotate-right botonInactivado" title='Descartar los cambios sin guardar'></i>
		<i class="fas fa-slash botonInactivado"></i>
		<i class="fas fa-trash-alt botonInactivado" title='Eliminar definitivamente tu edición'></i>
	</div>
	<button type="submit" tabindex="-1" class="submit botonInactivado"><i class="fas fa-check-circle" tabindex="-1" title="Guardar y volver a la vista anterior"></i></button>
</section>
