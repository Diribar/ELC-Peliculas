<!-- Tipo de Producto, Temporada, Capítulo, Colección -->
<%- include("0-RUD-Encabezado") %>
<!-- Datos -->
<section id="datos">
	<!-- Datos generales -->
	<div id="primeraColumna">
		<h3>Datos generales</h3>
		<!-- Primeros campos -->
		<% for (campo of camposDD1) { %><%- include("21-Edicion-Input", {campo}) %><% } %>
		<!-- País -->
		<%- include("22-Edicion-Pais") %>
		<!-- Idioma original -->
		<%- include("23-Edicion-Idioma", {idioma_id: registro.idioma_original_id}) %>
		<!--Existe una versión en castellano-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "en_castellano_id")}) %>
		<!--Es a Color-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "en_color_id")}) %>
		<!-- Producción -->
		<% for (campo of camposDD3) { %><%- include("21-Edicion-Input", {campo}) %><% } %>
		<h3>Datos Subjetivos</h3>
		<!--Categoría-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "categoria_id")}) %>
		<!--Sub-categoría-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "subcategoria_id")}) %>
		<!--Público sugerido-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "publico_sugerido_id")}) %>
	</div>
	<div id="segundaColumna">
		<!-- Personas -->
		<h3>Personas</h3>
		<% for (campo of camposDD2) { %><%- include("21-Edicion-Input", {campo}) %><% } %>
		<!-- Relación con la vida -->
		<h3>Relación con la vida</h3>
		<!--Personaje histórico-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "personaje_id")}) %>
		<!--Hecho histórico-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "hecho_id")}) %>
		<!--Valor-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "valor_id")}) %>
		<h3>Sinopsis</h3>
		<!--Sinopsis-->
		<%- include("24-Edicion-Sinopsis") %>
	</div>
</section>
<!-- Comandos -->
<section id="comandos">
	<div class="pack">
		<!-- Versión editada 'session' -->
		<i class="fa-solid fa-rotate-right inactivoDinamico version" tabindex="-1" title='Versión editada sin guardar'></i>
		<!-- Versión editada 'guardada' -->
		<i class="fa-solid fa-slash inactivo" tabindex="-1"></i>
		<i class="fa-solid fa-pencil inactivoEstable version" tabindex="-1" title='Versión editada guardada'></i>
		<!-- Versión original -->
		<i class="fa-solid fa-slash inactivo" tabindex="-1"></i>
		<i class="fa-solid fa-house version" tabindex="-1" title='Versión original'></i>
	</div>
	<div class="pack">
		<!-- Guardar cambios -->
		<label for="guardar"><i class="fa-solid fa-floppy-disk inactivoDinamico" tabindex="-1" title='Guardar los cambios'></i></label>
		<button type="submit" id="guardar" class="ocultar"></button>
		<!-- Eliminar -->
		<i class="fa-solid fa-slash inactivo" tabindex="-1"></i>
		<a href="<%= vista %>eliminar_edicion/?entidad=<%= entidad %>&id=<%= prodID %>">
			<i class="fa-solid fa-trash-can inactivoEstable" tabindex="-1" title='Eliminar definitivamente tu edición'></i>
		</a>
	</div>
</section>
<!-- Botones -->
<%- include("0-RUD-Flechas") %> 
