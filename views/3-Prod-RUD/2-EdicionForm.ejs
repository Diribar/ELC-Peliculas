<!-- Datos -->
<section id="datos">
	<!-- Datos generales -->
	<div id="primeraColumna">
		<h3>Datos generales</h3>
		<!-- Primeros campos -->
		<% for (campo of camposDD1) { %><%- include("21-Edicion-Input", {campo}) %><% } %>
		<!-- País -->
		<%- include("22-Edicion-Pais") %>
		<!-- Idioma original -->
		<%- include("23-Edicion-Idioma", {idioma_id: registro.idioma_original_id}) %>
		<!--Existe una versión en castellano-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "en_castellano_id")}) %>
		<!--Es a Color-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "en_color_id")}) %>
		<!-- Producción -->
		<% for (campo of camposDD3) { %><%- include("21-Edicion-Input", {campo}) %><% } %>
		<h3>Datos Subjetivos</h3>
		<!--Categoría-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "categoria_id")}) %>
		<!--Sub-categoría-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "subcategoria_id")}) %>
		<!--Público sugerido-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "publico_sugerido_id")}) %>
	</div>
	<div id="segundaColumna">
		<!-- Personas -->
		<h3>Personas</h3>
		<% for (campo of camposDD2) { %><%- include("21-Edicion-Input", {campo}) %><% } %>
		<!-- Relación con la vida -->
		<h3>Relación con la vida</h3>
		<!--Personaje histórico-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "personaje_id")}) %>
		<!--Hecho histórico-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "hecho_id")}) %>
		<!--Valor-->
		<%- include("25-Edicion-Select", {campo: camposDP.find(n => n.campo == "valor_id")}) %>
		<h3>Sinopsis</h3>
		<!--Sinopsis-->
		<%- include("24-Edicion-Sinopsis") %>
	</div>
</section>
<!-- Comandos -->
<section id="comandos">
	<div class="pack">
		<i class="fas fa-pencil-alt botonInactivado" tabindex="-1" title='Mostrar la versión editada'></i>
		<i class="fas fa-slash botonInactivado" tabindex="-1"></i>
		<i class="fas fa-home botonInactivado" tabindex="-1" title='Mostrar la versión original'></i>
	</div>
	<div class="pack">
		<i class="fas fa-save botonInactivado" tabindex="-1" title='Guardar los cambios'></i>
		<i class="fas fa-slash botonInactivado" tabindex="-1"></i>
		<i class="fa-solid fa-rotate-right botonInactivado" tabindex="-1" title='Descartar los cambios sin guardar'></i>
		<i class="fas fa-slash botonInactivado" tabindex="-1"></i>
		<i class="fas fa-trash-alt botonInactivado" tabindex="-1" title='Eliminar definitivamente tu edición'></i>
	</div>
</section>
<!-- Botones -->
<section id="flechas">
	<i class="fa-solid fa-circle-info" tabindex="-1" title="Ir a la vista 'Detalle'"></i>
	<i class="fa-solid fa-pen" tabindex="-1" title="Ir a la vista 'Edición'" style="display: none;"></i>
	<i class="fa-solid fa-globe" tabindex="-1" title="Ir a la vista 'Links'"></i>
</section>
