<section class="flex-row" id="data_entry">
	<div class="flex-col">  <!--Primera columna-->
		<section class="label-input flex-row">  <!--Pegar la información importada-->
			<div class="formulario-grupo">
				<textarea name="imports" cols="18" rows="1" placeholder="Pega acá la info"></textarea>
				<label>Pegar la información importada</label>
			</div>
		</section>
        <section class="label-input flex-row divisor">  <!--Link de la página que provee los datos-->
			<div class="formulario-grupo">
				<input type="text" name="link" placeholder=""
					value="<%= locals.data_entry ? data_entry.link : null %>">
				<% if (locals.errores && errores.link) { %><i class="fas fa-times-circle"></i><% } %>
				<label>Link de la página que provee los datos</label>
			</div>
        </section>
		<section>
			<label for="">Ingresaré los datos a mano</label>
		</section>
		<section class="label-input flex-row">  <!--Título original-->
			<div class="formulario-grupo">
				<input type="text" name="titulo_original" placeholder="Título original"
					value="<%= locals.data_entry ? data_entry.titulo_original : null %>">
				<% if (locals.errores && errores.titulo_original) { %><i class="fas fa-times-circle"></i><% } %>
				<% if (locals.errores && errores.titulo_original) { %><p><%= errores.titulo_original.msg %> </p><% } %>
				<label>Título original</label>
			</div>
		</section>
	</div>
</section>
<button type="submit">Enviar</button>