<%- include('0-Head') %>
<body>
  <%- include('1-Header') %>
  <main class="flex-row">
    <section id="imagen-derecha">
      <img alt="<%= producto.titulo_traducido %>" src="/images/3-Peliculas/<%= producto.imagen %>" title="<%= producto.titulo_traducido %>">
    </section>
    <section id="main-y-footer" class="flex-col grow">
      <%- include('3-Footer') %>
      <!--**************************** CUERPO ************************-->
      <section class="cuerpo flex-col">
        <button class="titulo"><%= producto.titulo_traducido %></button>
        <button class="subtitulo activo"><%= detalle.nombre %> </button>
        <%- detalle.nombre.includes("Información") ? include('2-PEL-Informacion') : "" %>
        <%- detalle.nombre.includes("Trailer") ?     include('3-PEL-Trailer') : "" %>
        <%- detalle.nombre.includes("Película") ?    include('4-PEL-Pelicula') : "" %>
        <%- detalle.nombre.includes("Calific") ?     include('5-PEL-Calificala') : "" %>
        <%- detalle.nombre.includes("Editar") ?      include('7-PEL-Editar') : "" %>
        <%- detalle.nombre.includes("Eliminar") ?    include('8-PEL-Eliminar') : "" %>
      </section>
      <!--****************************** FIN *************************-->
    </section>
  </main>
</body>
</html>