<%- include('0-Head') %>
<link rel="stylesheet" href="/stylesheets/3-PEL-Opciones/0-Opciones.css">
<link rel="stylesheet" href="/stylesheets/3-PEL-Opciones/Filtros.css">
<%- include('1-Header') %>

<!--***********************************************************-->
<main class="flex-row">
	<%- include('ImagenDerecha') %>
	<section id="main-y-footer" class="flex-col grow">
		<%- include('3-Footer') %>
		<!--**************************** CUERPO ************************-->
		<section class="flex-row grow cuerpo relative">
			<!--********************** CONTADOR ****************************-->
			<% if (opcionElegida && tipoElegido) { %>
				<button type="text" id="contador-de-peliculas">Contador</button>
			<% } %>
			<!--*********************** FILTROS ****************************-->
			<%- include('Filtros') %>
			<!--******************* ZONA DE PELÍCULAS **********************-->
			<section id="zona-de-pelis" class="flex-col grow">
				<!--///////////////////// TÍTULO PRINCIPAL ///////////////////-->
				<select name="" onchange="location = this.value;" class="titulo">
					<% if (!opcionElegida) { %>
						<option style="font-style: italic" class="ocultar" selected>
							Elegí una opción
						</option>
					<% } %> 
					<% for (let n of opciones_BD) { %>
						<option 
							value="/peliculas/<%= n.url %>"
							<% if (opcionElegida && opcionElegida.id == n.id) { %>selected<% } %>>
							<%= n.nombre %>
						</option>
					<% } %>
				</select> 
				<% if (opcionElegida) { %><p id="explicacion"><%= opcionElegida.comentario %></p><% } %>
				<!--///////////////////// TÍTULO SECUNDARIO ///////////////////-->
				<% if (opcionElegida) { %>
					<select name="" onchange="location = this.value;" class="subtitulo">
					<% if (!tipoElegido) { %>
						<option style="font-style: italic" class="ocultar" selected>
							Elegí una opción
						</option>
					<% } %>
					<% for (let n of tipos_BD) { %>
						<option 
							value="/peliculas/<%= n.url %>"
							<% if (tipoElegido && tipoElegido.id == n.id) { %>selected<% } %>>
							<%= n.nombre %>
						</option>
					<% } %>
					</select>          
				<% } %> 

				<!--///////////////////// Redireccionar ///////////////////-->
				<%- opcionElegida && tipoElegido ? include(opcionElegida.vista) : "" %>
			</section>
			<!--*************************** FIN ****************************-->
		</section>      
		<!--****************************** FIN *************************-->
	</section>
</main>
</body>
</html>