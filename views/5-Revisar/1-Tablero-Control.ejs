<div id="cuerpo">
	<h1 id="titulo"><%= titulo %></h1>
	<!-- Datos -->
	<section id="entidades">
		<!-- Datos generales -->
		<div id="primeraColumna">
			<h2>Productos</h2>
			<!-- Para inactivar -->
			<%- include("11-Tablero-Registros", {titulo: "Inactivar", estado: status.find(n => n.inactivar).id, registros: productos}) %>
			<!-- Aprobados c/edición -->
			<%- include("11-Tablero-Registros", {titulo: "Revisar Edición de Aprobados", estado: aprobados, registros: prodsConEdicion}) %>
			<!-- Editar altas (altas sin edición) -->
			<%- include("11-Tablero-Registros", {titulo: "Altas sin Edición", estado: status.find(n => n.alta_aprob).id, registros: productos.filter(n=> !n.ediciones.length)}) %>
			<!-- Aprobar ediciones AJENAS de altas -->
			<%- include("11-Tablero-Registros", {titulo: "Revisar Edición de Altas", estado: status.find(n => n.alta_aprob).id, registros: productos.filter(n => n.ediciones.length && n.ediciones[0].editado_por_id != userID && n.ediciones[0].editado_en < haceUnaHora )}) %>
			<!-- Aprobar el Alta -->
			<%- include("11-Tablero-Registros", {titulo: "Revisar Altas", estado: status.find(n => n.creado).id, registros: productos}) %>
			<!-- Recuperar -->
			<%- include("11-Tablero-Registros", {titulo: "Recuperar", estado: status.find(n => n.recuperar).id, registros: productos}) %>
		</div>
		<div id="segundaColumna">
			<!-- Personas -->
			<div>
				<h2>Relación con la Vida (RCLV)</h2>
				<!-- Aprobados c/edición -->
				<!-- titulo: "Ediciones" -->
				<!-- Aprobar el Alta -->
				<%- include("11-Tablero-Registros", {titulo: "Altas", estado: status.find(n => n.creado).id, registros: RCLVs}) %>
			</div>
			<div>
				<h2>Links</h2>
				<table>
					<tbody>
					<% for (let prodConLinks of prodsConLinks) { %>
						<tr>
							<td>
								<a href="/revision/links/?entidad=<%= prodConLinks.entidad %>&id=<%= prodConLinks.id %>">
									<%= prodConLinks.nombre %>
								</a>
							</td>
							<td><%= prodConLinks.entidad.slice(0,3).toUpperCase() %></td>
						</tr>
					<% } %>
					</tbody>
				</table>
	
			</div>
		</div>
	</section>
</div>
