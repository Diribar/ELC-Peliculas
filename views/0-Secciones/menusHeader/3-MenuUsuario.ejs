<div id="usuario-icono" class="scale">
	<% if (locals.usuario) { %>
		<% if (usuario.avatar!="-") { %>
			<div id="imagenUsuario">
				<img src="/imagenes/1-Usuarios/<%= usuario.avatar %>"/>
			</div>
		<% } else if (usuario.nombre != null) { %>
			<i id="letraInicial">
				<%= usuario.nombre.slice(0,1).toUpperCase() %>
			</i>
		<% } else { %>
			<i class="fa-solid fa-circle-user"></i>
		<% } %>
	<% } else { %>
		<i class="fa-solid fa-circle-question"></i>
	<% } %>
</div>
<div id="usuario-menu" class="dropdown-content ocultar">
	<% if (locals.usuario) { %>
		<a href="/usuarios/detalle"><i class="fa-solid fa-user"></i>Mi usuario</a>
		<a href="#"><i class="fa-solid fa-chart-bar"></i>Mis estad√≠sticas</a>
		<hr />
		<a href="/usuarios/logout"><i class="fa-solid fa-right-from-bracket"></i>Logout</a>
	<% } else { %>
		<a href="/usuarios/login"><i class="fa-solid fa-right-to-bracket"></i>Login</a>
		<a href="/usuarios/mail"><i class="fa-solid fa-registered"></i>Registrarse</a>
	<% } %>
</div>
