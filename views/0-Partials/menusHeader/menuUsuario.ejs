<div id="usuario-icono" class="centradoVertical">
	<% if (locals.usuario) { %>
		<% if (usuario.avatar!="-") { %>
			<div id="imagenUsuario">
				<img src="/imagenes/2-Usuarios/<%= usuario.avatar %>" class="usuario-iconos"/>
			</div>
		<% } else if (usuario.nombre != null) { %>
			<i id="letraInicial" class="usuario-iconos">
				<%= usuario.nombre.slice(0,1).toUpperCase() %>
			</i>
		<% } else { %>
			<i class="fas fa-user-circle usuario-iconos"></i>
		<% } %>
	<% } else { %>
		<i class="fas fa-question-circle usuario-iconos"></i>
	<% } %>
</div>
<div id="usuario-menu" class="dropdown-content ocultar">
	<% if (locals.usuario) { %>
		<a href="/usuarios/detalle">Mi usuario</a>
		<a href="#">Mis estad√≠sticas</a>
		<hr />
		<a href="/login/logout">Logout</a>
	<% } else { %>
		<a href="/login">Login</a>
		<a href="/usuarios/mail">Registrarse</a>
	<% } %>
</div>
