<div id="usuario-button" class="pointer">
	<% if (locals.usuario && locals.usuario.nombre != null) { %>
		<% if (locals.usuario.avatar!="-") { %> 
			<img
				src="/imagenes/2-Usuarios/<%= locals.usuario.avatar %>"
				class="desplegableUsuario absolute"
				id="imagenUsuario"
			/>
		<% } else { %>
			<div class="absolute">
				<i class="desplegableUsuario icono"><%= locals.usuario.nombre.slice(0,1) %></i>
			</div>
		<% } %> 
	<% } else { %>
		<i class="desplegableUsuario fas fa-user-circle icono absolute"></i>
	<% } %>
</div>
<div id="menu-usuario" class="dropdown-content ocultar">
	<% if (locals.usuario) { %>
		<a href="/usuarios/detalle">Mi usuario</a>
		<a href="#">Mis estad√≠sticas</a>
		<hr />
		<a href="/login/logout">Logout</a>
	<% } else { %>
		<a href="/login">Login</a>
		<a href="/usuarios/mail">Registrarse</a>
	<% } %>
</div>
