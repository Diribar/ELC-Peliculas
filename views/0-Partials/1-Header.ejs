<header>
	<!-- Home y Agregar -->
	<section>
		<!-- Logo de Home -->
		<div class="grupos">
			<a href="/">
				<i id="home-icono" class="fas fa-home scale"></i>
			</a>
			<%- include("menuHome") %>
		</div>
		<!-- Logo de Crear/Menú de Película -->
		<div class="grupos">
			<% if (typeof detalle != "undefined") { %>
				<i id="pelis-icono" class="fas fa-video"></i>
				<%- include("menuPelis") %> <% } else { %>
			<div id="pelis-icono" class="scale">
				<a href="/producto/agregar/palabras-clave">
					<i class="fas fa-video"></i>
					<i id="plus">+</i>
				</a>
			</div>
			<% } %>
		</div>
		<div class="grupos">
			<i class="fas fa-search scale"></i>
		</div>
	</section>
	<!-- Título del Encabezado -->
	<p>Evangelicemos la Cultura</p>
	<section>
		<!-- Música de fondo -->
		<div class="grupos">
			<i id="musica-icono" class="fas fa-music scale"></i>
			<audio src="/audio/Música-de-fondo.mp3"></audio>
		</div>
		<!-- Logo de usuario o Avatar -->
		<div class="grupos"><%- include("menuUsuario") %></div>
	</section>
</header>
