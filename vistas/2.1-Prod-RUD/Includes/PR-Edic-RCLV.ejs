<% let campo = camposDA.find(n => n.nombre == nombreDelCampo) %>

<section class="label-input RCLV">
	<label><%= campo.titulo %></label>
	<div class="inputError">
		<!-- Input -->
		<select name="<%= nombreDelCampo %>" class="input RCLV">
			<option value="1">Ninguno</option>
			<% for (let valor of campo.valores.filter(n => n.id > 1)) { %><option value="<%= valor.id %>" <% if (producto[nombreDelCampo] == valor.id) { %>selected<% } %>><%= valor.nombre %></option><% } %>
		</select>
		<!-- Ayuda -->
		<div class="ayuda">
			<i class="fa-solid fa-circle-question ayudaClick desplClick">
				<ul type="dots" class="ayudaMostrar ocultar desplMostrar">
					<% if (!campo.mensajes) {campo.mensajes = (campo.entidad == "peliculas") ? campo.mensajePeli : campo.mensajeColec} %>
					<% for (let mensaje of campo.mensajes) { %><li><%= mensaje %></li><% } %> 
				</ul>
			</i>
		</div>
		<!-- Link a RelaciÃ³n con la vida -->
		<i id="alta" class="fa-solid fa-circle-plus linkRCLV ocultar <%= nombreDelCampo %>" title='Agregar "<%= campo.titulo.toLowerCase() %>"' tabindex="-1"></i>
		<i id="edicion" class="fa-solid fa-square-pen linkRCLV ocultar <%= nombreDelCampo %>" title='Editar "<%= campo.titulo.toLowerCase() %>"' tabindex="-1"></i>
		<%- include("CMP-Errores") %>
		<!-- Aviso de cambio en el data-entry -->
		<i class="fa-solid fa-arrow-right-long ocultar"></i>
	</div>
</section>
