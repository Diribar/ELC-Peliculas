<% let campo = camposDA.find(n => n.nombre == nombre) %>
<section class="label-input">
	<label><%= campo.titulo %></label>
	<div class="inputError">
		<!-- Input -->
		<select name="<%= nombre %>" class="input <%= campo.angosto ? 'angosto ' : '' %>">
			<option value="" <% if (!registro[nombre]) { %>selected<% } %>>Elejí<% if (!campo.angosto) { %> una opción<% } %></option>
			<% for (let valor of campo.valores) { %>
				<option value="<%= valor.id %>" 
					<% if (registro[nombre] == valor.id) { %>selected<% } %>
				>
					<%= valor.nombre %>
				</option>
			<% } %>
		</select>
		<!-- Ayuda -->
		<div class="ayuda">
			<i class="fa-solid fa-circle-question ayudaClick desplClick">
				<ul type="dots" class="ayudaMostrar ocultar desplMostrar">
					<% if (!campo.mensajes) {campo.mensajes = (campo.entidad == "peliculas") ? campo.mensajePeli : campo.mensajeColec} %>
					<% for (let mensaje of campo.mensajes) { %><li><%= mensaje %></li><% } %> 
				</ul>
			</i>
		</div>
		<%- include("CMP-Errores", {nombre}) %>
		<!-- Aviso de cambio en el data-entry -->
		<i class="fa-solid fa-arrow-right-long ocultar"></i>
	</div>
</section>
