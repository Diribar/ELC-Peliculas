<% let campo = camposDP.find(n => n.nombreDelCampo == nombreDelCampo) %>
<section class="label-input">
	<label><%= campo.titulo %></label>
	<div class="inputError">
		<!-- Input -->
		<select name="<%= campo.nombreDelCampo %>" class="input <%= campo.angosto ? 'angosto ' : '' %>">
			<option value="" class="ocultar" <% if (!producto[campo.nombreDelCampo]) { %>selected<% } %>>Elejí<% if (!campo.angosto) { %> una opción<% } %></option>
			<% for (let valor of campo.valores) { %>
				<option value="<%= valor.id %>" 
					<% if (producto[campo.nombreDelCampo] == valor.id) { %>selected<% } %>
					<% if (campo.nombreDelCampo == "subcategoria_id") { %>class="<%= (valor.cfc ? "CFC" : "") + " " + (valor.vpc ? "VPC" : "") %>"<% } %>
					<% if (entidad != "colecciones" && (campo.nombreDelCampo == "en_castellano_id" || campo.nombreDelCampo == "en_color_id") && valor.id == 2) { %>class="ocultar"<% } %>
				>
					<%= valor[nombre] %>
				</option>
			<% } %>
		</select>
		<!-- Ayuda -->
		<div class="ayuda">
			<i class="fa-solid fa-circle-question ayudaClick despl_click">
				<ul type="dots" class="ayudaMostrar ocultar despl_mostrar">
					<% if (!campo.mensajes) {campo.mensajes = (campo.entidad == "peliculas") ? campo.mensajePeli : campo.mensajeColec} %>
					<% for (let mensaje of campo.mensajes) { %><li><%= mensaje %></li><% } %> 
				</ul>
			</i>
		</div>
		<!-- Errores -->
		<i class="fa-solid fa-circle-xmark ocultar"><span class="mensajeError"></span></i>
		<!-- Aviso de cambio en el data-entry -->
		<i class="fa-solid fa-arrow-right-long ocultar"></i>
	</div>
</section>
