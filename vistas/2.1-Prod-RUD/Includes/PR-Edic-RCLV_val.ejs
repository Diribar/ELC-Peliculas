<% registro = camposDA.find(n => n.nombre == campo) %>
<% let {titulo, valores, grupo} = registro %>
<section id="<%= campo %>" class="label-input">
	<label><%= titulo %></label>
	<div class="inputError">
		<!-- Input -->
		<select name="<%= campo %>" class="input">
			<optgroup label="Casos Puntuales">
				<% for (let valor of valores.filter(n => n.id < 10)) { %>
					<option value="<%= valor.id %>" class="RCLV" <% if (dataEntry[campo] == valor.id) { %>selected<% } %>><%= valor.nombre %></option>
				<% } %>
			</optgroup>
			<optgroup label="Listado General">
				<% for (let valor of valores.filter(n => n.id > 10)) { %>
					<option value="<%= valor.id %>" class="RCLV" <% if (dataEntry[campo] == valor.id) { %>selected<% } %>><%= valor.nombre %></option>
				<% } %>
			</optgroup>	
		</select>

		<%- include("PA4-DA9-Ayuda") %>
		<!-- Link a RelaciÃ³n con la vida -->
		<i id="alta" class="linkRCLV fa-solid fa-circle-plus <%= campo %>" title='Agregar "<%= titulo.toLowerCase() %>"'></i>
		<i id="edicion" class="linkRCLV fa-solid fa-square-pen ocultar <%= campo %>" title='Editar "<%= titulo.toLowerCase() %>"'></i>

		<!-- Aviso de cambio en el data-entry -->
		<i class="fa-solid fa-arrow-right-long ocultar"></i>
	</div>
</section>
