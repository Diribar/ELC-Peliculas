<section id="imagenDerecha" class="inputError">
	<!-- Input de avatar nuevo -->
	<label for="inputImagen">
		<img id="avatarEdicN" src="<%= avatar.edic %>" class="pointer imgAvatar edicN">
	</label>
	<input name="avatar" id="inputImagen" type="file" accept="image/*" class="input ocultar">
	<!-- Demás avatars -->
	<img id="avatarEdicG" src="<%= avatar.edic %>" class="ocultar imgAvatar edicG">
	<img id="avatarOrig" src="<%= avatar.orig %>" class="ocultar imgAvatar orig">
	<!-- Ayuda -->
	<div class="ayuda">
		<i class="fa-solid fa-circle-question ayudaClick despl_click">
			<ul type="dots" class="ayudaMostrar ocultar despl_mostrar">
				<li>Haciendo <em>click</em> en la imagen podés reemplazarla por otra.</li>
				<li>La extensión de la imagen debe ser <em><strong>JPG</strong></em> o <em><strong>PNG</strong></em></li>
			</ul>
		</i>
	</div>
	<%- include("CMP-Errores") %>
	<!-- Aviso de cambio en el data-entry -->
	<i class="fa-solid fa-arrow-right-long ocultar"></i>
</section>
