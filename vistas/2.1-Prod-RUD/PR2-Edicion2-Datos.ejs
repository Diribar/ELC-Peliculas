<section id="encabezadoDatos" class="flexCol">
	<!-- Tipo de Producto, Temporada, Capítulo, Colección -->
	<%- include("CR-Encabezado") %>
	<!-- Datos -->
	<div id="datos">
		<!-- Datos generales -->
		<div id="primeraColumna" class="columna">
			<h3>Datos Generales</h3>
			<!-- Primeros campos -->
			<% for (let campo of camposInput1) { %><%- include("PR2-Edic-Input", {campo}) %><% } %>
			<!-- Otros -->
			<%- include("PR2-Edic-Pais") %>
			<%- include("PR2-Edic-Idioma", {idioma_id: producto.idioma_original_id}) %>
			<%- include("PR2-Edic-Input", {campo: produccion}) %>
			<% if (userRevisor) { %>
				<%- include("PR2-Edic-Select", {nombre: "publico_id"}) %>
			<% } %>
			<h3>Datos Adicionales</h3>
			<!-- Campos SI / NO -->
			<% for (let campo of camposDA.filter(n => n.siNo)) { %><%- include("PR2-Edic-SI_NO", {campo}) %><% } %>
			<!-- Tipo de Actuación -->
			<%- include("PR2-Edic-TipoActuac", {nombre: "tipo_actuacion_id"}) %>
		</div>
		<div id="segundaColumna" class="columna">
			<!-- Cast/Crew -->
			<h3>Personas</h3>
			<% for (let campo of camposInput2) { %><%- include("PR2-Edic-Input", {campo}) %><% } %>
			<!-- Relación con la vida -->
			<div class="label-input">
				<h3>Relación con la vida</h3>
				<div id="errorRCLV" class="inputError">
					<%- include("CMP-Errores", {nombre: "RCLV"}) %>
				</div>
			</div>
			<!--Personaje histórico-->
			<%- include("PR2-Edic-RCLV_ph", {nombre: "personaje_id", grupos: gruposPers}) %>
			<!--Hecho histórico-->
			<%- include("PR2-Edic-RCLV_ph", {nombre: "hecho_id", grupos: gruposHechos}) %>
			<!--Valor-->
			<%- include("PR2-Edic-RCLV_val", {nombre: "valor_id"}) %>
			<h3>Sinopsis</h3>
			<!--Sinopsis-->
			<%- include("PR2-Edic-Sinopsis") %>
		</div>
	</div>
</section>
<!-- Botones y Comandos -->
<section class="flexRow">
	<!-- Botones -->
	<%- include("CR-Flechas") %> 
	<!-- Comandos -->
	<div class="flechas">
		<!-- Versión editada 'edicN' -->
		<div class="pack">
			<!-- Muestra la nueva edición sin guardar -->
			<i class="fa-solid fa-pen-to-square activaVersion activo" tabindex="-1" title='Muestra la edición nueva'></i>
			<!-- Guarda los cambios de la nueva edición -->
			<button type="submit">
				<i type="submit" id="guardar" class="fa-solid fa-floppy-disk edicN inactivoVersion" tabindex="-1" title='Guarda la edición nueva'></i>
			</button>
			<!-- Recarga la vista -->
			<i class="fa-solid fa-rotate-right elimina edicN  inactivoVersion" tabindex="-1" title='Elimina la edición nueva'></i>
		</div>
		<i class="fa-solid fa-slash inactivo" tabindex="-1"></i>
		<div class="pack">
			<!-- Muestra la edición guardada -->
			<i class="fa-solid fa-pencil activaVersion inactivoVersion" tabindex="-1" title='Muestra la edición guardada'></i>
			<!-- Elimina la edición guardada -->
			<i class="fa-solid fa-trash-can elimina edicG inactivoVersion" tabindex="-1" title='Elimina la edición guardada'></i>
		</div>
		<i class="fa-solid fa-slash inactivo" tabindex="-1"></i>
		<!-- Muestra la versión original -->
		<i class="fa-solid fa-house activaVersion" tabindex="-1" title='Muestra la versión original'></i>
	</div>
</section>
