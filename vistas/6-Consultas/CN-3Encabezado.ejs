<div id="izquierda">
	<!-- Layout -->
	<select name="layout" onchange="location = this.value;">
		<!-- Opciones en base de datos -->
		<% for (let layout of layouts) { %>
			<option value="./<%= layout.url %>" <% if (layout.url == layoutElegido) { %>selected<% } %>><%= layout.nombre %></option>
		<% } %>
	</select>
	<!-- Orden -->
	<select name="orden" required>
		<% if (!ordenElegido) { %>
			<!-- Sólo si no hay un orden elegido, toma en cuenta esta opción -->
			<option value="" class="ocultar" selected>Ordenar por...</option>
		<% } %>
		<!-- Opciones en base de datos -->
		<% for (let orden of ordenes) { %>
			<option 
				value="<%= orden.valor %>" 
				<% if (ordenElegido && orden.valor == ordenElegido) { %>selected<% } %> 
				class="<%= orden.ascDes ? 'ascDes' : orden.asc ? 'asc' : '' %>"
			><%= orden.nombre %></option>
		<% } %>
	</select>
	<!-- Ascendente / Descendente -->
	<div id="ascDes" class="flexCol">
		<div class="flexRow">
			<input type="radio" name="orden" id="descendente" checked>
			<label for="descendente">Descendente</label>
		</div>
		<div class="flexRow">
			<input type="radio" name="orden" id="ascendente">
			<label for="ascendente">Ascendente</label>
		</div>
	</div>
</div>
<div id="derecha">
	<!-- Contador -->
	<button type="text" id="contador-de-prods">Contador</button>
</div>
