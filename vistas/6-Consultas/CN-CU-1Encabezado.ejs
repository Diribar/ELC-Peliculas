<div id="izquierda">
	<!-- Layout -->
	<select name="layout" required>
		<!-- Opciones en base de datos -->
		<% for (let layout of layouts) { %>
			<option 
				value="<%= layout.id %>" 
				<% if (layout.id == opcionesElegidas.layout) { %>selected<% } %>
			><%= layout.nombre %></option>
		<% } %>
	</select>
	<!-- Orden -->
	<select name="orden" required>
		<option value="" class="ocultar" selected>Ordenar por...</option>
		<!-- Opciones en base de datos -->
		<% for (let orden of ordenes) { %>
			<option 
				value="<%= orden.id %>" class="ocultar" 
				<% if (orden.id == opcionesElegidas.orden) { %>selected <% } %>
			><%= orden.nombre %></option>
		<% } %>
	</select>
	<!-- Ascendente / Descendente -->
	<div id="ascDes" class="ocultar">
		<div class="flexRow">
			<input type="radio" name="ascDes" value="des" id="descendente" <% if (opcionesElegidas.ascDes=="des") { %>checked<% } %>>
			<label for="descendente">Descendente</label>
		</div>
		<div class="flexRow">
			<input type="radio" name="ascDes" value="asc" id="ascendente" <% if (opcionesElegidas.ascDes=="asc") { %>checked<% } %>>
			<label for="ascendente">Ascendente</label>
		</div>
	</div>
</div>
<div id="derecha">
	<!-- Contador -->
	<button type="text" id="contador-de-prods">Contador</button>
</div>
