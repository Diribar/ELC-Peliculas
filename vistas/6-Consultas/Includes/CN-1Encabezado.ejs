<div id="izquierda">
	<!-- Layout -->
	<select name="layout" onchange="location = './'+ this.value">
		<!-- Opciones en base de datos -->
		<% for (let layout of layouts) { %>
			<option value="<%= layout.url %>" <% if (layout.url == layoutElegido) { %>selected<% } %>><%= layout.nombre %></option>
		<% } %>
	</select>
	<!-- Orden -->
	<select name="orden" required class="elegibleSimple">
		<option value="" class="ocultar" selected>Ordenar por...</option>
		<!-- Opciones en base de datos -->
		<% for (let orden of ordenesPorLayout) { %>
			<option 
				value="<%= orden.valor %>" 
				<% if (orden.valor == opcionesElegidas.orden) { %>selected<% } %> 
				class="<%= orden.ascDes ? 'ascDes' : orden.asc ? 'asc' : '' %> <%= orden.bhr ? 'bhr' : '' %>"
			><%= orden.nombre %></option>
		<% } %>
	</select>
	<!-- Ascendente / Descendente -->
	<div id="ascDes" class="flexCol">
		<div class="flexRow">
			<input type="radio" name="ascDes" value="des" id="descendente" checked>
			<label for="descendente">Descendente</label>
		</div>
		<div class="flexRow">
			<input type="radio" name="ascDes" value="asc" id="ascendente" <% if (opcionesElegidas.ascDes=="asc") { %>checked<% } %>>
			<label for="ascendente">Ascendente</label>
		</div>
	</div>
</div>
<div id="derecha">
	<!-- Contador -->
	<button type="text" id="contador-de-prods">Contador</button>
</div>
