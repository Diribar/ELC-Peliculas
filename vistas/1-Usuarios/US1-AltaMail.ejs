<div id="tapar-el-fondo"></div>
<form method="POST">
	<!-- Cartel de progreso -->
	<%- include('CMP-CartelProgreso', {tarea: "Enviando el mail"}) %>
	<h1><%= titulo %> </h1>

	<!--E-Mail-->
	<%- include("US1-Mail") %>

	<!--Número de Documento y País-->
	<% if (errores.documento) { %>
		<%- include("US1-Docum") %>
	<% } %>

	<!--Flechas-->
	<section class="flechas">
		<!-- Salir -->
		<a href="<%= urlSalir %>" tabindex="-1"><i class="fa-solid fa-circle-left" title="Salir"></i></a>
		<!-- Submit -->
		<button type="submit" class="<%- errores ? 'inactivo' : '' %>"><i class="fa-solid fa-circle-check" title="Aceptar"></i></button>
	</section>
</form>
