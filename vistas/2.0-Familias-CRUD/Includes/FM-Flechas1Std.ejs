<div class="flechas">
	<!-- Salir -->
	<% if (locals.origen) { %>
		<a href="<%= '/inactivar-captura/?entidad=' + (locals.prodEntidad?prodEntidad:entidad) + (locals.prodID||locals.id ? ('&id=' + (locals.prodID?prodID:id)) : '') + '&origen=' + origen %>">
			<i class="fa-solid fa-circle-left" tabindex="-1" title="Ir a la vista de Origen"></i>
		</a>
	<% } %>
	<% if (tema == "prod_rud" || tema == "links_crud") { %>
		<!-- Detalle -->
		<% if (codigo != "detalle" && locals.id) { %>
			<a href="<%= '/' + familia + '/detalle/?entidad=' + entidad + '&id=' + id + (locals.origen ? ('&origen=' + origen) : '') %>">
				<i class="fa-solid fa-circle-info" tabindex="-1" title="Ir a la vista 'Detalle'"></i>
			</a>
		<% } %>
		<!-- Edición -->
		<% if (codigo != "edicion" && locals.id) { %>
			<a href="<%= '/' + familia + '/edicion/?entidad=' + entidad + '&id=' + id + (locals.origen ? ('&origen=' + origen) : '') %>">
				<i class="fa-solid fa-pen" tabindex="-1" title="Ir a la vista 'Edición'"></i>
			</a>
		<% } %>
	<% } %>
	<!-- Links -->
	<% if (tema == "prod_rud" && locals.id) { %>
		<a href="<%= '/links/abm/?entidad=' + entidad + '&id=' + id + (locals.origen ? ('&origen=' + origen) : '') %>">
			<i class="fa-solid fa-link" tabindex="-1" title="Ir a la vista 'Links'"></i>
		</a>
	<% } %>
	<% if (tema == "revisionEnts") { %>
		<a href="<%= rutaSalir %>" target="_self" tabindex="1">
			<i id="liberarSalir" class="fa-solid fa-circle-left" title="Liberar y salir"></i>
		</a>
		<button type="submit" autofocus tabindex="2">
			<i class="fa-solid fa-circle-check" title="Aprobar"></i>
		</button>
		<i id="mostrarMotivos" class="fa-solid fa-circle-xmark" tabindex="3" title="Rechazado"></i>
	<% } %>
</div>
