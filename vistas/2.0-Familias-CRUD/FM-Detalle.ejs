<div id="tituloPrincipal">
	<h1 id="titulo"><%= titulo %></h1>
	<!-- Ayuda -->
	<div class="ayuda">
		<i class="fa-solid fa-circle-question ayudaClick desplClick">
			<ul class="ayudaMostrar ocultar desplMostrar" type="<%- ayudasTitulo.length > 1 ? 'dots' : 'none' %>">
				<% for (let ayuda of ayudasTitulo) { %>
					<li><%= ayuda %></li>
				<% } %>
			</ul>
		</i>
	</div>
</div>
<section id="datos" class="flexRow grow">
	<section id="datosLargos">
		<div id="recuadro">
			<!-- Encabezado -->
			<div id="encabezado">
				<% if (tema == "rclv_crud") { %>
					<%- include("RCLV-Encabezado") %>
				<% } else { %>
					<%- include("FM-Encabezado") %>
				<% } %>
			</div>
			<div id="contenido" class="flexCol grow">
				<div id="informacion">
					<% if (tema == "rclv_crud") { %>
						<%- include("RCLV-") %>
					<% } else { %>
						<%- include("PR1-Det1-Largos") %>
					<% } %>
				</div>
				<!-- Botones -->
				<div id="botones" class="flexRow">
					<%- include("FM-Flechas") %>
					<div class="flechas inactivo">
						<i class="fa-solid fa-film" tabindex="-1" title="Ver el Trailer"></i>
						<% if (entidad != "colecciones") { %>
							<i class="fa-solid fa-video" tabindex="-1" title="Ver <%- entidad == "capitulos" ? "el" : "la" %> <%= prodNombre %>"></i>
						<% } %>
						<i class="fa-solid fa-user-graduate" tabindex="-1" title="Califica<%= (entidad=="capitulos" ? "lo" : "la") %>"></i>
						<i class="fa-solid fa-heart" tabindex="-1" title="Mi interés en <%= (entidad=="capitulos" ? "el capítulo" : "la " + (entidad=="peliculas" ? "película" : "colección")) %>"></i>
						<i class="fa-solid fa-book-open" tabindex="-1" title="Hacer o ver comentarios"></i>
					</div>
					<%- include("FM-Provisorios") %>
				</div>
			</div>
		</div>
	</section>
	<section id="datosBreves" class="sectorConDesplV bordeConSombra aparece">
		<!-- Contenido que se desplaza -->
		<nav> 
			<!-- Calificaciones -->
			<h3>Calificaciones</h3>
			<% if (producto.calificacion) { %>
				<p id="calificacionesResultados"></p>
				<div id="calificacionesGrafico"></div>
			<% } else { %>
				<p style="text-align: center; margin-top: 10px; font-style: italic;">- Sin calificaciones aún -</p>
			<% } %>
			<!-- Texto -->
			<h3>Datos Adicionales</h3>
			<div id="texto">
				<% for (bloque of bloquesDerecha) { %>
					<p <% if (bloque.titulo.startsWith("Status")) { %>class="status" id="status<%= bloque.id %>"<% } %>>
						<strong><%= bloque.titulo %>:</strong> <span><%= bloque.valor %></span>
						<% if (bloque.RCLV_entidad) { %>
							<% let datosRCLV = "entidad=" + bloque.RCLV_entidad + "&id=" + bloque.RCLV_id %>
							<a href="/rclv/detalle/?<%= datosRCLV %>">
								<i class="fa-solid fa-circle-info"></i>
							</a>
						<% } %>
					</p>
				<% } %>
			</div>
		</nav>
	</section>
</section>
