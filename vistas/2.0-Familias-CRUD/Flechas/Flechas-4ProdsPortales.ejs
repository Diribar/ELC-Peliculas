<!-- Logo de Portales de información de Películas -->
<% if (tema == "revisionEnts"&&(codigo == "producto/alta"||codigo == "producto/edicion") || (tema=="prod_rud"&&codigo=="edicion")) { %>
	<style>
		#sectorLogos a.logos {width: 30px; height: 30px; position: relative; }
		#sectorLogos a.logos img {width: 100%; height: 100%; position: absolute; object-fit: contain; border-radius: 8px;}
	</style>
	<div id="sectorLogos" class="flechas">
		<!-- TMDB -->
		<% tmdb = registro.nombreOriginal ? "search?language=es&query=" + registro.nombreOriginal : "" %>
		<a class="logos" href="//themoviedb.org/<%= tmdb %>" target="_blank">
			<img src="<%= localhost %>/imagenes/0-Base/Logos/BD-TMDB.jpg" title="The Movie Database">
		</a>
		<!-- FA -->
		<% fa = registro.nombreOriginal ? "search.php?stext=" + registro.nombreOriginal : "" %>
		<a class="logos" href="//filmaffinity.com/es/<%= fa %>" target="_blank">
			<img src="<%= localhost %>/imagenes/0-Base/Logos/BD-FA.jpg" title="Film Affinity">
		</a>
		<!-- IMDB -->
		<% imdb = registro.IMDB_id ? "title/"+registro.IMDB_id+"/technical" : (registro.nombreOriginal ? "find?q="+registro.nombreOriginal : "") %>
		<a class="logos" href="//imdb.com/<%= imdb %>" target="_blank">
			<img src="<%= localhost %>/imagenes/0-Base/Logos/BD-IMDB.jpg" title="Internet Movie Database">
		</a>
		<!-- Wikipedia -->
		<% wiki = registro.nombreCastellano ? registro.nombreCastellano.toLowerCase() : "" %>
		<a class="logos" href="//es.wikipedia.org/wiki/<%= wiki %>" target="_blank">
			<img src="<%= localhost %>/imagenes/0-Base/Logos/BD-Wiki.jpg" title="Wikipedia">
		</a>
		<!-- Google -->
		<% google = registro.nombreCastellano ? ("search?q=" + registro.nombreCastellano.toLowerCase()) : "" %>
		<a class="logos" href="//google.com/<%= google %>" target="_blank">
			<img src="<%= localhost %>/imagenes/0-Base/Logos/BD-Google.jpg" title="Google">
		</a>		
	</div>
<% } %>
