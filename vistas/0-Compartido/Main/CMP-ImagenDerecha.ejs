<% if (mostrar) { %>
	<!-- Mostrar la Imagen -->
	<section id="imgDerecha">
		<% let rutaImagen, tituloImagen %>
		<% if (locals.tema == "institucional" || locals.institucional) { %>
			<!-- 1. Imagen Institucional -->
			<% rutaImagen = '//localhost/imagenes/0-Base/Institucional-Imagen.jpg'; tituloImagen="ELC-Películas" %>
		<% } %>
		<% if (!rutaImagen && locals.imgDerPers) { %>
			<!-- 2. Imagen Personalizada -->
			<% rutaImagen = imgDerPers; tituloImagen=locals.tituloImgDerPers %>
		<% } %>
		<% if (!rutaImagen) { %>
			<!-- 3. Imagen Diaria -->
			<!-- Averigua qué datos usar -->
			<% let ahora = new Date() %>
			<% let horalLocal = ahora.getHours() - ahora.getTimezoneOffset() / 60 %>
			<% let horaLCF = ahora.getHours() + 12 %>
			<% let imagen = horaLocal < 0 ? "imgDerechaAyer.jpg" : horaLocal > 24 || horaLCF < 24 ? "imgDerechaHoy.jpg" : "imgDerechaAyer.jpg" %>
			<% rutaImagen = localhost + "/imagenes/0-Base/" + imagen %>
			<% tituloImagen = hoy ? tituloImgDerHoy : tituloImgDerAyer %>
		<% } %>
		<img src="<%= rutaImagen %>" title="<%= tituloImagen %>">
	</section>
<% } %>
