<% if (locals.mostrar || locals.informacion) { %>
	<!-- Formato -->
	<link rel="stylesheet" href="/formatos/0-Compartido/Main/Cartel.css">
	<!-- Tapar el fondo -->
	<section id="tapar-el-fondo" class="<%- !locals.informacion ? 'ocultar' : '' %>"></section>
	<!-- Cartel -->
	<section id="cartel" class="<%- !locals.informacion ? 'ocultar' : informacion.colorFondo ? informacion.colorFondo : '' %>">
		<i id="error" class="fa-solid fa-triangle-exclamation inicio"></i>
		<img id="gracias" src="/imagenes/0-Base/Check.png" height="60px" class="ocultar">
		<i id="trabajando" class="fa-solid fa-tools ocultar inicio"></i>
		<p id="titulo"></p>
		<% if (locals.informacion) { %>
			<ul id="mensajes" type="<%- informacion.mensajes.length > 1 ? 'dots' : 'none' %>">
				<% for (mensaje of informacion.mensajes) { %>
					<li><%= mensaje %> </li>
				<% } %>
			</ul>
		<% } else { %>
			<ul id="mensajes"></ul>
		<% } %>
		<!-- Se usa para InformaciÃ³n y Front-End -->
		<div id="flechasCartel">
			<% if (locals.informacion) { %>
				<% for (icono of informacion.iconos) { %>
					<% let autoFocus = informacion.iconos.length == 1 || icono.autofocus %> 
					<a href="<%= icono.link %>" <% if (autoFocus) { %>autofocus<% } %>>
						<i class="fa-solid <%= icono.nombre %>" title="<%= icono.titulo %>"></i>
					</a>
				<% } %>
			<% } %>
		</div>
	</section>
<% } %>
