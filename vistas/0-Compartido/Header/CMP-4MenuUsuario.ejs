<% if (locals.usuario) { %>
	<div id="menuUsuario" class="desplMostrar menuMostrar menuFondo ocultar menuDerecha">
		<% for (let menu of menuUsuario) { %>

			<% if (menu.permInputs && (!locals.usuario || !usuario.rolUsuario.permInputs)) { continue } %>

			<% if (menu.hr) { %><hr><% } %>

			<a href="<%= menu.href %>" class="menuOpcion">
				<i class="<%= menu.icono %> fa-solid icono"></i>
				<span><%= menu.titulo %></span>
			</a>

		<% } %>
	</div>
<% } %>
