<div class="desplMostrar menuMostrar menuFondo ocultar menuDerecha">
	<% for (const campo in videosInduccion) { %>
		<% const menu = videosInduccion[campo] %>
		<% let interrumpir = false %>

		<% // Revisa si se necesita algún permiso para mostrar el menú %>
		<% for (const permiso of rolesUs.map(n => n.codigo)) { %>
			<% if (menu[permiso] && (!locals.usuario || !usuario.rolUsuario[permiso])) { interrumpir = true } %>
		<% } %>
		<% if (interrumpir) { break } %>

		<% if (menu.hr) { %><hr><% } %>

		<p class="menuOpcion">
			<i class="fa-solid icono <%= menu.icono %>"></i>
			<span><%= menu.titulo %></span>
		</p>

	<% } %>
</div>
