<%- include('CMP-TimerContador') %>
<section id="tituloConAyuda">
	<h1 id="titulo"><%= titulo %></h1>
	<!-- Ayuda -->
	<i id="iconoAyuda" class="fa-solid fa-circle-question"></i>
	<ul class="mensajeAyuda ocultar" type="dots">
		<li>Necesitamos que nos digas si los datos coinciden con el documento.</li>
		<li>Si el documento no corresponde, te vamos a pedir que nos digas el motivo.</li>
	</ul>	
</section>
<form method="POST" id="subcuerpo" class="flex-col">
	<div id="datos">
		<div id="texto">
			<% for (campo of campos) { %>
				<div class="campos">
					<p><em><%= campo.titulo %></em>: <strong><%= campo.valor %></strong></p>
					<!-- Aprobar y Rechazar -->
					<div class="iconos">
						<label for="<%= campo.nombre %>-SI">
							<i class="fa-solid sinDecision fa-circle-check"></i>
						</label>
						<input id="<%= campo.nombre %>-SI" type="radio" name="<%= campo.nombre %>" value="SI" class="ocultar">
						<label for="<%= campo.nombre %>-NO">
							<i class="fa-solid sinDecision fa-circle-xmark"></i>
						</label>
						<input id="<%= campo.nombre %>-NO" type="radio" name="<%= campo.nombre %>" value="NO" class="ocultar">
					</div>
				</div>
			<% } %>
		</div>
		<div id="documento">
			<img src="/imagenes/2-DocsUsuarios/<%= user.documento_avatar %>" alt="documento" title="Documento">
			<!-- Aprobar y Rechazar -->
			<div class="iconos">
				<label for="documento_avatar-SI">
					<i class="fa-solid sinDecision fa-circle-check"></i>
				</label>
				<input id="documento_avatar-SI" type="radio" name="documento_avatar" value="SI" class="ocultar">
				<label for="documento_avatar-NO">
					<i class="fa-solid sinDecision fa-circle-xmark"></i>
				</label>
				<input id="documento_avatar-NO" type="radio" name="documento_avatar" value="NO" class="ocultar">
			</div>
			<!-- Motivos de rechazo -->
			<select name="motivo_docum_id" id="motivo_docum" class="ocultar">
				<option value="" selected class="ocultar">Eleg√≠ un motivo de rechazo</option>
				<% for (motivo of motivos_docum) { %>
					<option value="<%= motivo.id %>"><%= motivo.descripcion %></option>
				<% } %>
			</select>
		</div>
	</div>
	<div id="flechas">
		<a href="/inactivar-captura/?entidad=usuarios&id=<%= userID %>&origen=tableroUs" target="_self">
			<i id="liberarSalir" class="fa-solid fa-circle-left" tabindex="-1" title="Volver al Tablero"></i>
		</a>
		<button type="submit">
			<i id="submit" class="fa-solid fa-circle-check inactivo" title="Entendido"></i>
		</button>
	</div>
</form>
