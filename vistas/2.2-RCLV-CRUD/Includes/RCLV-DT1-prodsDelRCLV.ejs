<% for (let prod of prodsDelRCLV) { %>
	<li id="prodsNuevos">
		<a href="/producto/detalle/?entidad=<%= prod.entidad %>&id=<%= prod.id %>">
			<!-- Info a mostrar -->
			<button type="text" class="flexRow pointer" id= "prod" autofocus>
				<img class="imagenChica" src="<%= localhost %><%= prod.avatar %>" alt="<%= prod.nombre_original %>" title="<%= prod.nombre_original %>">
				<div id="infoPeli" class="flexCol">
					<p><strong><%= prod.nombre_original %></strong></p>
					<p class="interlineadoChico"><em><%= prod.nombre_castellano %></em></p>	
					<br>
					<p class="interlineadoChico"><%= prod.ano_estreno + " - " + prod.prodNombre %></p>
					<% if (prod.direccion) { %>
						<p class="interlineadoChico">Director: <%= prod.direccion %></p>
					<% } %>
				</div>
			</button>
		</a>
	</li>
<% } %>
