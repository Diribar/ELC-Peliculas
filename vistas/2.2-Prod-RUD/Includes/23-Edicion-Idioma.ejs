<section class="label-input">
	<label>Idioma original</label>
	<div class="input-error">
		<select name="idioma_original_id" class="input">
			<optgroup label="Más frecuentes">
				<% for (let idioma of BD_idiomas.filter(n => n.mas_frecuente)) { %>
					<option value="<%= idioma.id %>" <% if (idioma_id==idioma.id) { %>selected<% } %>><%= idioma.nombre %></option>
				<% } %>	
			</optgroup>
			<optgroup label="Demás idiomas">
				<% for (let idioma of BD_idiomas.filter(n => !n.mas_frecuente)) { %>
					<option value="<%= idioma.id %>" <% if (idioma_id==idioma.id) { %>selected<% } %>><%= idioma.nombre %></option>
				<% } %>	
			</optgroup>
		</select>
		<!-- Errores -->
		<i class="fa-solid fa-circle-xmark<%- !errores.idioma_original_id ? ' ocultar' : '' %>">
			<span class="mensajeError"><%= errores.idioma_original_id %></span>
		</i>
		<i class="fa-solid fa-circle-check ocultar"></i>
		<!-- Aviso de cambio en el data-entry -->
		<i class="fa-solid fa-arrow-right-long ocultar"></i>
	</div>
</section>
