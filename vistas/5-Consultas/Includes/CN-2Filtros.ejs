		<!-- EVENTUALES -->
		<!-- Basado en Hechos Reales -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.bhr, eventual: true}) %>
		<!-- Aparición Mariana -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.apMar, eventual: true}) %>
		<!-- Roles Iglesia -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.rolesIgl, eventual: true}) %>
		<!-- Proceso de Canonización -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.canons, eventual: true}) %>
		<hr>

		<!-- COLA DE PREFERENCIAS -->
		<!-- Público Recomendado -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.publicos}) %>
		<!-- Época de Estreno -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.epocasEstreno}) %>
		<!-- Preferencia por Película -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.ppp_opciones}) %>
		<!-- Tipos de Link -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.tiposLink}) %>
		<!-- Idioma Castellano -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.castellano}) %>
		<!-- Tipo de Actuación -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.tiposActuacion}) %>
