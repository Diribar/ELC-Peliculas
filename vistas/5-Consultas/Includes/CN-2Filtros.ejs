<!--Filtros Guardados-->
<div id="filtroPers">
	<div id="filtroPersNuevo" class="relative">
		<input name="filtroPersNuevo" type="text" class="absolute">
	</div>
	<select name="filtroPers_id">
		<option value="">Filtros Guardados...</option>
		<optgroup label="Propios">
			<% for (filtroPers of filtrosDeCabecera.propios) { %>
				<option 
					value="<%= filtroPers.id %>"
					<% if (filtroPers.id == filtroPers_id) { %>selected<% } %>
				><%= filtroPers.nombre %></option>
			<% } %>
		</optgroup>
		<optgroup label="Predeterminados">
			<% for (filtroPers of filtrosDeCabecera.elc) { %>
				<option 
					value="<%= filtroPers.id %>"
					<% if (filtroPers.id == filtroPers_id) { %>selected<% } %>
				><%= filtroPers.nombre %></option>
			<% } %>
		</optgroup>
	</select>
	<div id="iconos" class="flexRow">
		<i id="nuevo" class="fa-solid fa-file scale inactivo" title="Crea un filtro nuevo"></i>
		<i id="deshacer" class="fa-solid fa-rotate-left scale inactivo" title="Deshace los cambios"></i>
		<i id="guardar" class="fa-solid fa-floppy-disk scale inactivo" title="Guarda los cambios"></i>
		<i id="edicion" class="fa-solid fa-pen scale inactivo" title="Edición del nombre"></i>
		<i id="eliminar" class="fa-solid fa-trash-can scale inactivo" title="Elimina el filtro actual"></i>
	</div>
</div>
<!-- Campos específicos -->
<div id="campos" class="flexCol">
	<div class="flexColAlign ocultar">
		<h2>Filtros para enfocar tu búqueda</h2>
		<i class="fa-solid fa-arrow-down"></i>
	</div>
	<div class="sectorConDesplV">
		<nav class="ocultar flexCol">
			<!-- PRIORITARIOS -->
			<!-- Relación con la Iglesia Católica -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.cfc, mostrarSiempre: true}) %>
			<!-- Epoca de Ocurrencia -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.epocasOcurrencia, mostrarSiempre: true}) %>
			<hr>

			<!-- EVENTUALES -->
			<!-- Basado en Hechos Reales -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.bhr, mostrarSiempre: false, class: "bhr ocultar"}) %>
			<!-- Aparición Mariana -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.apMar, mostrarSiempre: false, class: "apMar ocultar"}) %>
			<!-- Roles Iglesia -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.rolesIglesia, mostrarSiempre: false, class: "rolesIglesia ocultar"}) %>
			<!-- Proceso de Canonización -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.canons, mostrarSiempre: false, class: "canons ocultar"}) %>
			<hr>

			<!-- COLA DE PREFERENCIAS -->
			<!-- Público Recomendado -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.publicos, mostrarSiempre: true}) %>
			<!-- Época de Estreno -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.epocasEstreno, mostrarSiempre: true}) %>
			<!-- Preferencia por Película -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.ppp_opciones, mostrarSiempre: true}) %>
			<!-- Tipos de Link -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.tiposLink, mostrarSiempre: true}) %>
			<!-- Idioma Castellano -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.castellano, mostrarSiempre: true}) %>
			<!-- Tipo de Actuación -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.tiposActuacion, mostrarSiempre: true}) %>
			<!-- Musical -->
			<%- include('CN-FL-Selects', {asunto: filtrosPorCampo.musical, mostrarSiempre: true}) %>
			<hr>

			<!-- Búsqueda -->
			<div id="palabrasClave" class="filtro mostrarSiempre prefSimple"> 
				<input type="text" name="palabrasClave" placeholder="Buscar por palabras clave" class="input">
				<i class="fa-solid fa-circle-right" title="Aplicar las palabras"></i>
			</div>
		</nav>
	</div>
</div>
