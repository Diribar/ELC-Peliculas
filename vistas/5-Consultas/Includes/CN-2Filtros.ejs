<!--Filtros Guardados-->
<div id="configCabecera">
	<div id="configNueva" class="relative">
		<input name="nombreNuevo" type="text" class="absolute">
	</div>
	<select name="configCons_id">
		<option value="">Filtros Guardados...</option>
		<!-- Configuraciones personales -->
		<% if (configs.propios.length) { %>
			<optgroup id="propios" label="Configuraciones Propias">
				<% for (let config of configs.propios) { %>
					<option 
						value="<%= config.id %>"
						<% if (config.id == configCons_id) { %>selected<% } %>
					><%= config.nombre %></option>
				<% } %>
			</optgroup>
		<% } %>
		<!-- Configuraciones predeterminadas -->
		<% if (userID != 1) { %>
			<optgroup label="Provistas por Nuestro Sitio">
				<% for (let config of configs.predeterms) { %>
					<option 
						value="<%= config.id %>"
						<% if (config.id == configCons_id) { %>selected<% } %>
					><%= config.nombre %></option>
				<% } %>
			</optgroup>
		<% } %>
	</select>
	<div id="iconosBotonera" class="flexRow">
		<i id="nuevo" class="fa-solid fa-file scale inactivo" title="Crea un filtro nuevo"></i>
		<i id="deshacer" class="fa-solid fa-rotate-left scale inactivo" title="Deshace los cambios"></i>
		<i id="guardar" class="fa-solid fa-floppy-disk scale inactivo" title="Guarda los cambios"></i>
		<i id="edicion" class="fa-solid fa-pen scale inactivo" title="Edición del nombre"></i>
		<i id="eliminar" class="fa-solid fa-trash-can scale inactivo" title="Elimina el filtro actual"></i>
	</div>
</div>
<div id="checkBoxes" class="flexRow">
	<% if (locals.usuario) { %>
		<div class="flexRow">
			<input id="noLaVi" type="checkbox"><label for="noLaVi">Sin preferencia</label>
		</div>
	<% } %>
	<div class="flexRow">
		<input id="conLinks" type="checkbox"><label for="conLinks">Con links</label>
	</div>
	<div class="flexRow">
		<input id="enCast" type="checkbox"><label for="enCast">En castellano (habl./subt.)</label>
	</div>
</div>

<!-- Campos -->
<div id="configCampos" class="flexCol sectorConDesplV">
	<nav class="startUp flexCol ocultar">
		<!-- PRIORITARIOS -->
		<% if (locals.usuario) { %>
			<!-- Preferencia por Película -->
			<%- include('CN-FL-Selects', {asunto: configsConsCampos.pppOpciones, eventual: true, color: 'ppp'}) %>
		<% } %>

		<!-- RELACIONADO CON LA IGLESIA CATÓLICA -->
		<!-- Relación con la Iglesia Católica -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.cfc, eventual: true, color: 'cfc'}) %>
		<!-- Proceso de Canonización -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.canons, eventual: true, color: 'cfc'}) %>
		<!-- Roles Iglesia -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.rolesIgl, eventual: true, color: 'cfc'}) %>
		<!-- Aparición Mariana -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.apMar, eventual: true, color: 'cfc'}) %>

		<!-- HECHOS REALES -->
		<!-- Basado en Hechos Reales -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.bhr, eventual: true, color: 'bhr'}) %>
		<!-- Epoca de Ocurrencia -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.epocasOcurrencia, color: 'bhr'}) %>

		<!-- ATRIBUTOS DE LA PELÍCULA -->
		<!-- Público Recomendado -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.publicos}) %>
		<!-- Época de Estreno -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.epocasEstreno}) %>
		<!-- Tipos de Link -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.tiposLink, eventual: true}) %>
		<!-- Idioma Castellano -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.castellano, eventual: true}) %>
		<!-- Tipo de Actuación -->
		<%- include('CN-FL-Selects', {asunto: configsConsCampos.tiposActuacion}) %>

		<!-- Búsqueda -->
		<div id="palabrasClave" class="pref invisible">
			<input type="text" name="palabrasClave" class="prefSimple" placeholder="Buscar por palabras clave">
			<i class="fa-solid fa-circle-right inactivo scale" title="Aplicar las palabras"></i>
		</div>
	</nav>
</div>

<!-- Muestra / Oculta filtros -->
<div id="mostrarOcultarFiltros" class="flexCol ocultar">
	<div id="mostrarFiltros" class="pointer scale">
		<em>Click</em> para <span>ver</span><br>más filtros
	</div>
	<div id="ocultarFiltros" class="pointer scale ocultaFiltros">
		<em>Click</em> para <span>ocultar</span><br>los filtros sin usar
	</div>
</div>
