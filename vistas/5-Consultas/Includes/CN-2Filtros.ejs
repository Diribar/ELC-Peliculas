		<!-- Búsqueda -->
		<div id="palabrasClave" class="filtro mostrarSiempre"> 
			<input type="text" name="palabrasClave" placeholder="Buscar por palabras clave" class="prefSimple">
			<i class="fa-solid fa-circle-right" title="Aplicar las palabras"></i>
		</div>
	</nav>
</div>
