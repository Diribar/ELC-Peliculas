<!-- Layout, Orden, Ascendente / Descendente -->
<div id="izquierda">
	<!-- Layout -->
	<select name="layout_id" required>
		<option value="" class="ocultar" selected>Eleg√≠ un layout...</option>
		<!-- Opciones en base de datos -->
		<% for (let layout of cn_layouts) { %>
			<option 
				value="<%= layout.id %>" 
				<% if (layout.id == prefsDeCampo.layout_id) { %>selected<% } %>
			><%= layout.nombre %></option>

		<% } %>
	</select>
	<!-- Orden -->
	<select name="orden_id" required>
		<option value="" class="ocultar" selected>Ordenar por...</option>
		<!-- Opciones en base de datos -->
		<% for (let orden of cn_ordenes) { %>
			<option 
				value="<%= orden.id %>" class="ocultar" 
				<% if (orden.id == prefsDeCampo.orden_id) { %>selected <% } %>
			><%= orden.nombre %></option>
		<% } %>
	</select>
	<!-- Ascendente / Descendente -->
	<div id="ascDes" class="ocultar">
		<div class="flexRow">
			<input type="radio" name="ascDes" value="ASC" id="ascendente" <% if (prefsDeCampo.ascDes=="ASC") { %>checked<% } %>>
			<label for="ascendente">Ascendente</label>
		</div>
		<div class="flexRow">
			<input type="radio" name="ascDes" value="DESC" id="descendente" <% if (prefsDeCampo.ascDes=="DESC") { %>checked<% } %>>
			<label for="descendente">Descendente</label>
		</div>
	</div>
</div>
<!-- Contador -->
<div id="derecha">
	<button type="text" id="contador_de_prods">Contador</button>
</div>
