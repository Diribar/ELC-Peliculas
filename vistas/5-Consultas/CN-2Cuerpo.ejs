<!-- Zona de Preferencias -->
<section id="configCons" class="bordeConSombra">
	<%- include('CN-2Filtros') %>
</section>
<!-- Encabezado + Productos -->
<section id="encabMasPelis" class="ocultar">
	<!-- Encabezado -->
	<div id="encabezado">
		<%- include('CN-1Encabezado') %>
	</div>
	<!-- Zona de Productos -->
	<div id="zonaDisponible">
		<div id="vistaDeResults" class="bordeConSombra">
			<!-- Telón de fondo, Zona 'Esperando Resultados' y Actualizar -->
			<img id="telonFondo" src="<%= localhost %>/imagenes/0-Base/Varios/Cortinas.jpg">
			<div id="esperandoResultados" class="ocultar desaparece"></div>
			<div id="actualizar" class="scale"><i class="fa-solid fa-rotate-right" title="Actualizar"></i></div>

			<!-- Zona de scroll -->
			<div id="scroll">
				<ul id="botones"></ul>
				<div id="listados"></div>
			</div>

			<!-- Zona de carteles -->
			<div id="carteles">
				<!-- Carteles -->
				<button id="quieroVer" class="cartel scale pointer ocultar">Quiero ver las<br>películas propuestas</button>
				<button id="noTenemos" class="cartel ocultar">Sin resultados<br>para esa consulta</button>
				<button id="asegurate" class="cartel ocultar">Asegurate de contestar<br>los sectores en rojo</button>
				<button id="loginPend" class="cartel ocultar">Tenés que estar <span><a href="/usuarios/login">logueado</a></span> para ver tus preferencias</button>
				<button id="verVideo"  class="cartel ocultar">Te sugerimos <br><span><a href="/usuarios/login">hacer el login</a></span> y <span id="consultas"><br> ver el video explicativo</span></button>
				<%- include("CN-Cartel1OrdenPPP") %>
				<%- include("CN-Cartel2UsSinPPP") %>
			</div>
		</div>
	</div>
	<%- include("CMP-3Footer", {mostrar: true}) %>
</section>
