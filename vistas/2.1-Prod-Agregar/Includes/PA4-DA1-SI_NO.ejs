<% const campo = tema.nombre %>
<% if (campo=="color") { %><hr><% } %>
<div class="inputError flexRowAlign altoFila">
	<label id="siNoTitulo" class="negrita"><%= tema.titulo %></label>
	<div id="siNoOpciones" class="flexRowAlign">
		<div class="flexRowAlign">
			<input id="<%= campo %>SI" type="radio" name="<%= campo %>" value="1" <% if (!camposDE.includes(campo)&&campo=="color" || dataEntry[campo]==1) { %>checked<% } %> class="radioSI">
			<label for="<%= campo %>SI">SI</label>
		</div>
		<div class="flexRowAlign">
			<input id="<%= campo %>NO" type="radio" name="<%= campo %>" value="0" <% if (!camposDE.includes(campo)&&campo=="musical" || camposDE.includes(campo)&&(dataEntry[campo]==0)) { %>checked<% } %> class="radioNO">
			<label for="<%= campo %>NO">NO</label>
		</div>
	</div>
	<%- include("CMP-Errores", {display: true, campo}) %>
</div>
