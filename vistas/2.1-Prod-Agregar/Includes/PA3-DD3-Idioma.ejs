<section class="label-input">
	<% let inputOK = idioma_id && !errores.idioma_original_id %>
	<label>Idioma original</label>
	<div class="inputError">
		<select name="idioma_original_id" autofocus class="input<% if (inputOK) { %> despl_click<% } %>" <% if (inputOK) { %>disabled<% } %>>
			<option value="" <% if (idioma_id=="") { %>selected<% } %> class="ocultar">Elejí un idioma</option>
			<optgroup label="Más frecuentes">
				<% for (let idioma of idiomas.filter(n => n.mas_frecuente)) { %>
					<option value="<%= idioma.id %>" <% if (idioma.id==idioma_id) { %>selected<% } %>><%= idioma.nombre %></option>
				<% } %>	
			</optgroup>
			<optgroup label="Demás idiomas">
				<% for (let idioma of idiomas.filter(n => !n.mas_frecuente)) { %>
					<option value="<%= idioma.id %>" <% if (idioma.id==idioma_id) { %>selected<% } %>><%= idioma.nombre %></option>
				<% } %>	
			</optgroup>
		</select>
		<%- include("PA3-DD9-Mensajes", {inputOK}) %>
		<%- include("CMP-Errores", {campo: "idioma_original_id"}) %>
	</div>
</section>
