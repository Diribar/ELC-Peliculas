<!-- Ayuda -->
<% if (!registro.mensajes) {registro.mensajes = (dataEntry.entidad == "peliculas") ? registro.mensajePeli : registro.mensajeColec} %>
<div class="ayuda">
	<i class="fa-solid fa-circle-question ayudaClick despl_click">
		<ul type="<%- registro.mensajes.length > 1 ? 'dots' : 'none' %>" class="ayudaMostrar ocultar despl_mostrar">
			<% registro.mensajes.forEach((mensaje, indice) => { %>
				<li <% if (registro.mensCateg) { %>class="<%= registro.mensCateg[indice] %>"<% } %>><%= mensaje %></li>
			<% }) %> 
		</ul>
	</i>
</div>
