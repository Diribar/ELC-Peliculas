<div class="campoTitulo"><%= campo.titulo %></div>
<div class="campoNombre ocultar"><%= campo.nombre %></div>
<div class="infoMostrar">
	<div class="orig"><%= campo.mostrarOrig %></div>
	<div class="edic">
		<%= campo.mostrarEdic %>
		<!-- Aprobar y Rechazar -->
		<i class="fa-solid fa-circle-check"></i>
		<i class="fa-solid fa-circle-xmark mostrarMotivos"></i>
	</div>
</div>
<div class="campoValor ocultar"><%= campo.valorEdic %></div>

<!-- Motivo -->
<div id="cartelRechazo" class="ocultar">
	<i class="fa-solid fa-trash-can rechazar" tabindex="-1" title='Rechazar'></i>
	<select name="motivo_id" required>
		<option value="">Elej√≠ un motivo</option>
		<% motivos = campo.input ? motivos : motivos.filter(n => n.info_erronea || n.otros) %>
		<% for (motivo of motivos) { %>
			<option value="<%= motivo.id %>" <% if (motivos.length==1) { %>selected<% } %>><%= motivo.comentario %></option>
		<% } %>
	</select>
</div>

