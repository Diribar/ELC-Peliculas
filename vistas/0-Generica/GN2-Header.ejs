<header>
	<!-- Home y Agregar -->
	<section>
		<!-- Menú de Home -->
		<div class="grupos">
			<i class="fa-solid fa-house scale iconoMenu iconos" title="Menú de Inicio"></i>
			<%- include("GN2-1MenuHome") %>
		</div>
		<!-- Búsqueda rápida -->
		<div id="busquedaRapida" class="grupos">
			<i class="fa-solid fa-magnifying-glass scale iconoMenu iconos" title="Búsqueda rápida"></i>
			<%- include("GN2-2MenuBusqueda") %>
		</div>
		<!-- Agregar un Producto -->
		<div class="grupos">
			<a href="/producto/agregar/confirma" tabindex="-1">
				<div id="crear-prod-icono" class="scale" title="Agregar un Producto">
					<i class="fa-solid fa-video iconos"></i>
					<i class="fa-solid fa-plus iconos"></i>
				</div>
			</a>
		</div>
		<% if (locals.usuario && locals.usuario.rol_usuario.aut_gestion_prod) { %>
			<!-- Revisar Altas y Ediciones -->
			<div class="grupos">
				<a href="/revision/tablero-de-control" tabindex="-1">
					<i class="fa-solid fa-spell-check scale iconos" title="Revisar Altas y Ediciones"></i>
				</a>
			</div>
		<% } %>
	</section>
	<!-- Título del Encabezado -->
	<p id="titulo">ELC - Películas</p>
	<section>
		<!-- Música de fondo -->
		<div class="grupos">
			<i id="icono-musica" class="fa-solid fa-music scale iconos"></i>
			<audio src="/audio/Música-de-fondo.mp3"></audio>
		</div>
		<!-- Usuario -->
		<div class="grupos">
			<%- include("GN2-IconoUsuario") %>
			<%- include("GN2-4MenuUsuario") %>
		</div>
	</section>
</header>
