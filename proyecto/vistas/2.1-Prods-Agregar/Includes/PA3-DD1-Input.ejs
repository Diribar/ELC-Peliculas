<section class="labelInput">
	<% let inputOK = !errores[nombre] %>
	<label for="<%= nombre %>"><%= registro.titulo %></label>
	<!-- Data-entry y Errores -->
	<div class="inputError">
		<input id="<%= nombre %>" type="<%- registro.numero ? 'number' : 'text' %>"
			class="input<% if (inputOK) { %> ayudaClick<% } %><% if (registro.numero) { %> numero<% } %>"
			name="<%= nombre %>"
			autocomplete="off"
			value="<%= dataEntry[nombre] %>"
			placeholder="<%- registro.numero ? "Sólo números" : "Ingresá el texto" %>"
			<% if (inputOK) { %>disabled<% } else { %>autofocus<% } %>
		>
		<%- include("PA3-DD9-Ayuda", {inputOK}) %>
		<% if (nombre == "actores") { %><%- include("MN-Ayuda", {mensaje: "Si la película es un documental o dibujo animado, lo que pongas en <em>Actuación</em> será reemplazado más adelante por el sistema."}) %><% } %>
		<%- include("MN-Errores", {nombre, ocultarOK: true}) %>
	</div>
</section>
