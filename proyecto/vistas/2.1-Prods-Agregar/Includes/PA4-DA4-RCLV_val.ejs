<% const campo = camposDA.find(n => n.nombre == nombre) %>
<% const {titulo, valores} = campo %>
<section id="<%= nombre %>" class="labelSelect">
	<label><%= titulo %></label>
	<div class="inputError">
		<!-- Input -->
		<select name="<%= nombre %>" class="input" autofocus>
			<optgroup label="Casos Puntuales">
				<% for (let valor of valores.filter(n => n.id < 10)) { %>
					<option value="<%= valor.id %>" class="RCLV" <% if (dataEntry[nombre] == valor.id) { %>selected<% } %>><%= valor.nombre %></option>
				<% } %>
			</optgroup>
			<optgroup label="Listado General">
				<% for (let valor of valores.filter(n => n.id > 10)) { %>
					<option value="<%= valor.id %>" class="RCLV" <% if (dataEntry[nombre] == valor.id) { %>selected<% } %>><%= valor.nombre %></option>
				<% } %>
			</optgroup>
		</select>

		<% if (!campo.mensajes) campo.mensajes = (campo.entidad == "peliculas") ? campo.mensajePeli : campo.mensajeColec %>
		<% if (campo.mensajes) { %><%- include("MN-Ayuda", {mensajes: campo.mensajes}) %><% } %>

		<!-- Link a RelaciÃ³n con la vida -->
		<i class="linkRCLV fa-solid fa-circle-plus alta <%= nombre %>" title='Agregar "<%= titulo.toLowerCase() %>"'></i>
		<i class="linkRCLV fa-solid fa-square-pen edicion ocultar <%= nombre %>" title='Editar "<%= titulo.toLowerCase() %>"'></i>
	</div>
</section>
