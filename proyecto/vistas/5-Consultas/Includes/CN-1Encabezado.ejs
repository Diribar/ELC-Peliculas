<!-- Layout, Orden, Ascendente / Descendente -->
<!-- El id debe ser 'tituloPrincipal' por formato compartido -->
<section id="tituloPrincipal" class="flexRow">
	<!-- Mostrar filtros -->
	<div id="toggleFiltrosGlobal">
		<i class="fa-solid fa-chevron-right"></i>
	</div>

	<!-- Opciones -->
	<select name="opcion_id" class="prefSimple" required>
		<optgroup id="cuatroPelis" label="Cuatro PelÃ­culas">
			<% for (let opcion of cn_opciones.filter(n => n.boton)) { %>
			<option value="<%= opcion.id %>"><%= opcion.nombre %></option>
			<% } %>
		</optgroup>
		<optgroup label="Listados">
			<% for (let opcion of cn_opciones.filter(n => !n.boton && !n.opcion.loginNeces)) { %>
			<option value="<%= opcion.id %>"><%= opcion.nombre %></option>
			<% } %>
		</optgroup>
		<% if (locals.usuario) { %>
			<optgroup label="Mis listados">
				<% for (let opcion of cn_opciones.filter(n => !n.boton && n.opcion.loginNeces)) { %>
				<option value="<%= opcion.id %>"><%= opcion.nombre %></option>
				<% } %>
			</optgroup>
		<% } %>
	</select>

	<!-- Ayuda -->
	<div id="ayudaOpciones">
		<i class="fa-solid fa-circle-question ayudaClick desplClick">
			<ul type="dots" class="ayudaMostrar ocultar desplMostrar">
				<% for (let opcion of cn_opciones) { %>
					<li><span><%= opcion.nombre %></span>: <%= opcion.ayuda %>.</li>
				<% } %>
			</ul>
		</i>
	</div>
</section>

<!-- Contador -->
<section id="derecha">
	<button type="text" id="contadorDeProds">...</button>
</section>
