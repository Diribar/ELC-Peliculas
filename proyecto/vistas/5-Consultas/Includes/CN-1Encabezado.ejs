<section id="encabezado">
	<!-- El id debe ser 'tituloPrincipal' por formato compartido -->
	<div id="tituloPrincipal" class="flexCol">
		<div id="layoutAyuda" class="flexRow">
			<!-- Opciones -->
			<select name="layout_id" class="prefSimple" required>
				<option value="" selected class="ocultar">Buscando el layout...</option>
				<optgroup id="cuatroPelis" label="Cuatro Películas">
					<% for (let layout of cnLayouts.filter(n => n.grupo == "boton")) { %>
						<option value="<%= layout.id %>"><%= layout.nombre %></option>
					<% } %>
				</optgroup>
				<optgroup label="Listados de películas">
					<% for (let layout of cnLayouts.filter(n => n.grupo == "productos")) { %>
						<option value="<%= layout.id %>"><%= layout.nombre %></option>
					<% } %>
				</optgroup>
				<optgroup label="Relación con la vida">
					<% for (let layout of cnLayouts.filter(n => n.grupo == "rclvs")) { %>
						<option value="<%= layout.id %>"><%= layout.nombre %></option>
					<% } %>
				</optgroup>
				<% if (locals.usuario) { %>
				<optgroup label="Mis listados">
					<% for (let layout of cnLayouts.filter(n => n.grupo == "loginNeces")) { %>
						<option value="<%= layout.id %>"><%= layout.nombre %></option>
					<% } %>
				</optgroup>
				<% } %>
			</select>

			<!-- Ayuda -->
			<%- include("CN-1EncabezadoAyuda") %>
		</div>
		<div id="iconosDelTitulo" class="flexRow">
			<!-- Ayuda -->
			<%- include("CN-1EncabezadoAyuda") %>

			<!-- Compartir la consulta -->
			<div id="compartirCons" class="iconosAzules scale pointer">
				<i class="fa-solid fa-share-nodes" title="Compartir las preferencias"></i>
			</div>
			<p id="consCopiada" class="absolute ocultar">Consulta copiada</p>

			<!-- Mostrar filtros -->
			<div id="toggleFiltrosGlobal" class="iconosAzules scale pointer">
				<i class="fa-solid fa-chevron-right"></i>
			</div>
		</div>
	</div>

	<!-- Contador -->
	<button id="contadorDeProds" type="text">...</button>
</section>
