<% for (let prod of prodsDelRCLV) { %>
	<li id="prodsNuevos">
		<a href="/producto/detalle/?entidad=<%= prod.entidad %>&id=<%= prod.id %>">
			<!-- Info a mostrar -->
			<button id= "prod" type="text" class="flexRow pointer <% if (prod.statusRegistro_id==inactivo_id) { %>rojo<% } %>" autofocus>
				<img class="imagenChica" src="<%= prod.avatar %>" alt="<%= prod.nombreOriginal %>" title="<%= prod.nombreOriginal %>">
				<div id="infoPeli" class="flexCol">
					<p id="nombreCastellano" class="interlineadoChico"><%= prod.nombreCastellano %></p>
					<% if (prod.nombreOriginal != prod.nombreCastellano) { %>
						<p id="nombreOriginal"><%= prod.nombreOriginal %></p>
					<% } %>
					<br>
					<p id="anoEstreno" class="interlineadoChico"><%= prod.anoEstreno + " - " + prod.entidadNombre %></p>
					<% if (prod.direccion) { %>
						<p class="interlineadoChico">Direcci√≥n: <%= prod.direccion %></p>
					<% } %>
					<i class="interlineadoChico scale <%= prod.ppp.icono %>" tabindex="-1" title="<%= prod.ppp.nombre %>"></i>
				</div>
			</button>
		</a>
	</li>
<% } %>
