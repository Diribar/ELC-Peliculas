<% if (familia == "producto" && ["alta/p", "edicion"].includes(codigo)) { %>
	<!-- Logo de Portales de información de Películas -->
	<style>
		#logoPortales a.logos img {width: 27px; height: 27px; object-fit: contain;}
		#logoPortales a.logos.true img {border: 3px solid var(--verde-oscuro)}
	</style>

	<div id="logoPortales" class="iconos">
		<!-- IMDB -->
		<% imdb = registro.IMDB_id ? "title/"+registro.IMDB_id+"/technical" : (registro.nombreOriginal ? "find?q="+registro.nombreOriginal : "") %>
		<a class="logos" href="//imdb.com/<%= imdb %>" target="_blank" tabindex="-1">
			<img src="/publico/imagenes/Logos/BD-IMDB.jpg" title="Internet Movie Database">
		</a>
		<!-- FA -->
		<% fa = registro.nombreOriginal ? "search.php?stext=" + registro.nombreOriginal : "" %>
		<a class="logos <%= registro.fuente=='FA' %>" href="//filmaffinity.com/es/<%= fa %>" target="_blank" tabindex="-1">
			<img src="/publico/imagenes/Logos/BD-FA.jpg" title="Film Affinity">
		</a>
		<!-- Wikipedia -->
		<% wiki = registro.nombreCastellano ? registro.nombreCastellano.toLowerCase() : "" %>
		<a class="logos" href="//es.wikipedia.org/wiki/<%= wiki %>" target="_blank" tabindex="-1">
			<img src="/publico/imagenes/Logos/BD-Wiki.jpg" title="Wikipedia">
		</a>
		<!-- Google -->
		<% google = registro.nombreCastellano ? ("search?q=" + registro.nombreCastellano.toLowerCase()) : "" %>
		<a class="logos <%= registro.fuente=='IM' %>" href="//google.com/<%= google %>" target="_blank" tabindex="-1">
			<img src="/publico/imagenes/Logos/BD-Google.jpg" title="Google">
		</a>
		<!-- TMDB -->
		<% tmdb = registro.nombreOriginal ? "search?language=es&query=" + registro.nombreOriginal : "" %>
		<a class="logos <%= registro.fuente=='TMDB' %>" href="//themoviedb.org/<%= tmdb %>" target="_blank" tabindex="-1">
			<img src="/publico/imagenes/Logos/BD-TMDB.jpg" title="The Movie Database">
		</a>
	</div>
<% } %>
