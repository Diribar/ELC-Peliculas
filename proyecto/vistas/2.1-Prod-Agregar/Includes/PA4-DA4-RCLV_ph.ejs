<% const campo = camposDA.find(n => n.nombre == nombre) %>
<% const {titulo, valores} = campo %>
<section id="<%= nombre %>" class="labelSelect flexRowAlign">
	<label><%= titulo %></label>
	<div class="inputError">
		<!-- Input -->
		<select name="<%= nombre %>" class="input" autofocus>
			<% for (let grupo of grupos) { %>
				<optgroup label="<%= grupo.label %>" class="<%= grupo.clase %>">
					<% for (let valor of grupo.valores) { %>
						<option value="<%= valor.id %>" class="RCLV <%= valor.clase %>" <% if (dataEntry[nombre] == valor.id) { %>selected<% } %>><%= valor.nombre %></option>
					<% } %>
				</optgroup>
			<% } %>
		</select>

		<%- include("P-Ayuda", {campo}) %>
		<!-- Link a RelaciÃ³n con la vida -->
		<i class="linkRCLV fa-solid fa-circle-plus alta <%= nombre %>" title='Agregar "<%= titulo.toLowerCase() %>"'></i>
		<i class="linkRCLV fa-solid fa-square-pen edicion ocultar <%= nombre %>" title='Editar "<%= titulo.toLowerCase() %>"'></i>
	</div>
</section>
