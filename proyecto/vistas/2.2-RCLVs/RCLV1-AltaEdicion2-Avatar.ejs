<section id="imgDerecha" class="inputError OK">
	<!-- Input de avatar nuevo -->
	<% if (codigo != "rclv/solapamiento") { %>
		<label for="inputImagen">
			<img id="imgAvatar" src="<%= imgDerPers %>">
		</label>
		<input name="avatar" id="inputImagen" type="file" accept="image/*" class="input ocultar">
		<div class="ayudaErrores absoluteCentro">
			<%- include("MN-Ayuda", {mensajes: ["Haciendo <em>click</em> en la imagen podés reemplazarla.", "Podés elegir una imagen de internet sin descargarla en tu equipo, ingresando su dirección url", "La extensión de la imagen debe ser <em><b>JPG</b></em>, <em><b>JPEG</b></em> o <em><b>PNG</b></em>"]}) %>
			<%- include("MN-Errores", {nombre: "avatar", ocultarOK: true}) %>
		</div>
		<!-- Aviso de cambio en el data-entry -->
		<i class="<%= iconos.faSolid %> fa-arrow-right-long ocultar"></i>
		<!-- Links a sitios externos para buscar imágenes alternativas -->
		<nav class="agregados scaleChildren">
			<a href="" target="_blank">
				<img src="/publico/imagenes/Logos/BD-Google.jpg" title="Buscar en Google" class="scale">
			</a>
		</nav>
	<% } else { %>
		<img src="<%= imgDerPers %>" id="imgAvatar">
	<% } %>
</section>
