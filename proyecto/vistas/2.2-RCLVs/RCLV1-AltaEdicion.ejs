<form id="cuerpoFooterImgDer" method="POST" enctype="multipart/form-data">
	<section id="cuerpoFooter">
		<div id="cuerpo">
			<%- codigo != "agregar" ? include('MN-TimerContador') : "" %>
			<div id="tituloPrincipal">
				<h1 id="titulo"><%= titulo %></h1>
				<%- include("MN-Ayuda", {mensaje: "Al terminar, te pedimos que vayas a la vista <em>Detalle</em> para liberarlo."}) %>
			</div>
			<div id="datos" class="flexRow grow spaceEvenly">
				<div id="dataEntry" class="bordeConSombra">
					<%- include('RCLV1-AltaEdicion2-Datos') %>
				</div>
				<% if (locals.bloqueDer) { %>
					<div id="datosBreves">
						<%- include("FM-Breves") %>
					</div>
				<% } %>
			</div>
		</div>
		<%- include('CMP-4Footer') %>
	</section>
	<%- include("RCLV1-AltaEdicion1-Avatar") %>
</form>