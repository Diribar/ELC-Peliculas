<!-- Ayuda -->
<div class="ayuda <%- locals.ayudaClass ? ayudaClass : 'absolute' %>">
	<i class="fa-solid fa-circle-question ayudaIconoForm ayudaClick">
		<div class="ayudaMensForm ayudaMensMostrar ocultar">
			<% if (locals.parrafo) { %><p><%- parrafo %></p><% } %>
			<% if (locals.mensaje || locals.mensajes) { %>
				<% const tipoTexto = !!locals.mensaje %>
				<ul type="<%- tipoTexto || (mensajes.length == 1) ? 'none' : 'disc' %>">
					<% if (tipoTexto) { %>
						<li><%- mensaje %></li>
					<% } else for (let mensaje of mensajes) { %>
						<li><%- mensaje %></li>
					<% } %>
				</ul>
			<% } %>
		</div>
	</i>
</div>
