<% const tipoTexto = !!locals.mensaje %>

<!-- Ayuda -->
<div class="ayuda <%- locals.ayudaClass ? ayudaClass : 'absolute' %>">
	<i class="fa-solid fa-circle-question ayudaIconoForm ayudaClick<%- locals.iclass ? (' ' + iclass) : '' %>">
		<div class="ayudaMensForm ayudaMensMostrar ocultar">
			<% if (locals.parrafo) { %>
				<p><%- parrafo %></p>
			<% } %>
			<ul <% if (locals.ulId) { %>id="<%= ulId %>"<% } %> type="<%- tipoTexto || (mensajes.length == 1) ? 'none' : 'dots' %>">
				<% if (tipoTexto) { %>
					<li><%- mensaje %></li>
				<% } else for (let mensaje of mensajes) { %>
					<li><%- mensaje %></li>
				<% } %>
			</ul>
		</div>
	</i>
</div>
