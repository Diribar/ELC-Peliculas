<section id="todoElMain" class="<%- !locals.informacion ? 'ocultar' : '' %>">
	<!-- Tapar el fondo -->
	<div id="tapaElFondo" class="<%- !locals.informacion ? 'ocultar' : '' %>"></div>

	<!-- Cartel -->
	<div id="cartelGenerico" class="cartelCentro absoluteCentro flexColAlign <%- !locals.informacion ? 'ocultar' : informacion.check ? 'check' : informacion.trabajando ? 'trabajando' : '' %>">
		<!-- Íconos -->
		<i id="alerta" class="fa-solid fa-triangle-exclamation inicio<%- locals.informacion && (locals.informacion.check || locals.informacion.trabajando) ? ' ocultar' : '' %>"></i>
		<img id="check" src="/publico/imagenes/Varios/Check.png" class="inicio<%- !locals.informacion || !locals.informacion.check ? ' ocultar' : '' %>" height="60px">
		<i id="trabajando" class="fa-solid fa-tools inicio<%- !locals.informacion || !locals.informacion.trabajando ? ' ocultar' : '' %>"></i>

		<!-- Título -->
		<h1 id="titulo"><%= locals.informacion ? informacion.titulo : '' %></h1>

		<div id="contenedorMensajes">
			<% if (locals.informacion) { %>
				<% if (informacion.ol) { %>
					<ol id="mensajes" type="<%- informacion.mensajes.length > 1 ? '1' : 'none' %>">
						<% for (mensaje of informacion.mensajes) { %>
							<li><%- mensaje %></li>
						<% } %>
					</ol>
				<% } else { %>
					<ul id="mensajes" type="<%- informacion.mensajes.length > 1 ? 'disc' : 'none' %>">
						<% for (mensaje of informacion.mensajes) { %>
							<li><%- mensaje %></li>
						<% } %>
					</ul>
				<% } %>
			<% } %>
		</div>
		<div id="iconosCartel">
			<% if (locals.informacion) { %>
				<% informacion.iconos.forEach((icono, i) => { %>
					<% let autoFocus = informacion.iconos.length == 1 || icono.autofocus %>
					<a href="<%= icono.link %>" tabindex="<%= i + 1 %>" <% if (autoFocus) { %>autofocus<% } %>>
						<i class="fa-solid <%= icono.nombre %>" title="<%= icono.titulo %>"></i>
					</a>
				<% }) %>
			<% } %>
		</div>
	</div>
</section>
